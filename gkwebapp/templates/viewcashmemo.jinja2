
<html>
<head>
  <meta charset="utf-8">
  <title>{% trans %}GNUKhata | Cash Memo{% endtrans %}</title>
  <style media="screen">
  #invoice_product_table_gst th{
      font-size: 75%;
  }
  .fixed-table td {
      font-size: 75%;
      padding: 4 !important;
      margin: 4 !important;
    }
  .fixed-table th {
      font-size: 75%;
  }


  .fixed-table thead ,.fixed-table tbody tr,.fixed-table tfoot tr {
      display:table;
      width:100%;
      table-layout:fixed;
  }
  .fixed-table thead {
      width: calc( 100% - 0.75em );
  }

  .fixed-table tfoot {
    display:block;
    width: calc( 100% - 0.75em );
  }
  .nopadding{
    margin:0 !important;
    padding:0 !important;
  }


  </style>
</head>

<body>
  <div class="container-fluid" style="padding: 1 !important; margin: 0 !important;">
    <div class="alert alert-success" id="success-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Cash Memo saved.{% endtrans %}
    </div>
    <div class="alert alert-danger" id="failure-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Something went wrong!{% endtrans %}
    </div>
    <div class="alert alert-danger" id="duplicate-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Duplicate cash memo no.!{% endtrans %}
    </div>
    <div class="alert alert-danger" id="product-blank-alert"  aria-live="rude" role="alert" hidden>

      <label for="vno">{% trans %}Please select a product!{% endtrans %}</label>
    </div>
    <div class="alert alert-danger" id="quantity-blank-alert"  aria-live="rude" role="alert" hidden>

      <label for="vno">{% trans %}Please enter quantity!{% endtrans %}</label>
    </div>
    <div class="alert alert-danger" id="price-blank-alert"  aria-live="rude" role="alert" hidden>

      <label for="vno">{% trans %}Please enter the price per unit!{% endtrans %}</label>
    </div>
    <div class="alert alert-success" id="cash-success-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Cash Memo Cancelled.{% endtrans %}
    </div>
    <div class="panel invoice_panel shadow">
      <div class="panel-body">
        <div class="container-fluid row">

          <div class="alert alert-danger" id="date-blank-alert"  aria-live="rude" role="alert" hidden>

            <label for="vno">{% trans %}Please enter date!{% endtrans %}</label>
          </div>
          <div class="alert alert-danger" id="challanno-blank-alert"  aria-live="rude" role="alert" hidden>

            <label for="vno">{% trans %}Please enter cash memo no.!{% endtrans %}</label>
          </div>
          <div class="alert alert-danger" id="issuer-blank-alert"  aria-live="rude" role="alert" hidden>

            <label for="vno">{% trans %}Please enter issuer's name!{% endtrans %}</label>
          </div>
          <div class="alert alert-danger" id="date-alert"  aria-live="rude" role="alert" hidden>

            <label for="vno">{% trans %}Please enter date in proper format!{% endtrans %}</label>
          </div>
          <div class="form-group col-md-12">
            <label for="invoice_deliverynote">
              {% trans %}Cash Memo{% endtrans %} :
            </label>
            <select class="form-control input-sm" id="invoice_all_no" accesskey="">
              <option value="" disabled hidden selected>{% trans %}Select Cash Memo{% endtrans %}</option>
              {% for invoice in gkresult %}
              <option value="{{invoice['invid']}}">{{invoice["invoiceno"]}} {{invoice["invoicedate"]}}</option>
              {% endfor %}
            </select>
            <div class="alert alert-danger nopadding" id="cancelmsg" aria-live="rude" role="alert" hidden>
              <strong id="alertstrong">Cash Memo cancelled on  </strong>
          </div>
          </div>
          <div class="col-md-3 hidden-load" hidden>

            <div class="form-group">
              <label for="invoice_challanno">{% trans %}Cash Memo No{% endtrans %} :</label>
              <input class="form-control input-sm disable" id="invoice_challanno" placeholder="{% trans %}Enter invoice no{% endtrans %}" accesskey="a">
            </div>
          </div>
          <div class="col-md-3 hidden-load" hidden>

            <div class="form-group">
              <label for="invoice_date">{% trans %}Date{% endtrans %} :</label>
              <div class="form-inline ">
                <div class="form-group">
                  <input type="text" class="form-control input-sm invoicedate disable" size="2" maxlength="2" placeholder="DD" id="invoice_date" accesskey="v">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control input-sm invoicedate disable" size="2" maxlength="2" placeholder="MM" id="invoice_month" accesskey="v">
                </div>
                <div class="form-group">
                  <input type="text" class="form-control input-sm invoicedate disable" size="4" maxlength="4" placeholder="YYYY" id="invoice_year" accesskey="v">
                </div>
              </div>
            </div>

          </div>

          <div class="col-md-3 invstate hidden-load" hidden >

            <div class="form-group">
              <label for="invoice_state">{% trans %}State{% endtrans %} :</label>
              <input type="text" class="form-control input-sm" id="invoice_state">
              </div>

          </div>
          <div class="col-md-3 hidden-load" hidden>
     <label for="tax applicable" name="taxflag">{% trans %}Tax Applicable{% endtrans %} :</label>
     <select class="form-control input-sm"  id="taxapplicable" accesskey="" disabled>
       <option value="7" selected>GST</option>
       <option value="22">VAT</option>
     </select>
         </div>




          {% if gkstatus=="out" %}

          <input type="hidden" id="status" value="15">
          {% endif %}
        </div>

        <div class="container-fluid hidden-load"  id="invoice_product_div" hidden>
      <!--  <div class="container-fluid hidden-load" hidden  id="invoice_product_div">-->
          <div class="panel">
                        <table id="invoice_product_table" class="shadow table table-condensed table-bordered fixed-table fixed-tablepurchase" >
                          <thead class="bg-primary">
                            <tr>
                              <th class="col-xs-2 text-center">{% trans %}Product{% endtrans %}</th>
                              <th class="col-xs-2 text-center">{% trans %}Quantity{% endtrans %}</th>
                              <th class="col-xs-2 text-center">{% trans %}Free Quantity{% endtrans %}</th>
                              <th class="col-xs-2 text-center">{% trans %}Price Per Unit{% endtrans %}</th>
                              <th class="col-xs-1 text-center">{% trans %}Discount{% endtrans %}</th>
                               <th class="col-xs-1 text-center">{% trans %}Taxable Value{% endtrans %}</th>
                              <th class="col-xs-1 text-center">{% trans %}Tax Rate{% endtrans %}</th>
                              <th class="col-xs-1 text-center">{% trans %}Tax Amount{% endtrans %}</th>
                              <th class="col-xs-2 text-center">{% trans %}Total{% endtrans %}</th>

                            </tr>
                          </thead>
                          <tbody>
                            <tr>
                              <td class="col-xs-2">
                                <select class="form-control input-sm product_name_vat">
                                  <option value="" disabled hidden selected>Select Product</option>
                                  {% for product in products %}
                                  <option value="{{product['productcode']}}">{{product["productdesc"]}}</option>
                                  {% endfor %}
                                </select>
                              </td>
                              <td class="col-xs-2">
                                <div class="input-group">
                                  <input type="text" class="invoice_product_quantity form-control input-sm text-right invdetails" value="0" placeholder="0" aria-describedby="unitaddon">
                                  <span class="input-group-addon input-sm" id="unitaddon"></span>
                                </div>
                              </td>
                              <td class="col-xs-2">
                                <div class="input-group">
                                  <input type="text" class="invoice_product_freequantity form-control input-sm text-right invdetails" value="0" placeholder="0" aria-describedby="unitaddon">
                                  <span class="input-group-addon input-sm" id="freeunitaddon"></span>
                                </div>
                              </td>
                              <td class="col-xs-2">
                                <input type="text" class="invoice_product_per_price form-control input-sm text-right numtype invdetails" value="0.00" placeholder="0.00">
                              </td>
                              <td class="col-xs-1">
                                <input type="text" class="invoice_product_discount form-control input-sm text-right numtype invdetails" value="0.00" placeholder="0.00" size="8">
                              </td>
                              <td class="col-xs-1">
                      		      <input type="text" class="invoice_product_taxablevalue form-control input-sm text-right numtype invdetails" value="0.00" placeholder="0.00" size="8" disabled>
                      		    </td>
                              <td class="col-xs-1">
                                <input type="text" class="invoice_product_tax_rate form-control input-sm text-right numtype invdetails" value="0.00" placeholder="0.00" disabled>
                              </td>
                              <td class="col-xs-1">
                                <input type="text" class="invoice_product_tax_amount form-control input-sm text-right numtype invdetails" value="0.00" placeholder="0.00" disabled>
                              </td>
                              <td class="col-xs-2">
                                <input type="text" class="invoice_product_total form-control input-sm text-right numtype " value="0.00" placeholder="0.00" disabled>
                              </td>


                            </tr>
                          </tbody>
                          <tfoot>
                            <tr>
                              <td class="col-xs-9 text-right">
                                <input type="text" class=" form-control input-sm text-right" value="{% trans %}Total{% endtrans %}" placeholder="" disabled>
                              </td>
                              <td class="col-xs-2">
                                <input type="text" class=" form-control deliverychallan_edit_disable input-sm text-right invdetails" value="0.00" id="total" disabled>
                              </td>

                            </tr>
                          </tfoot>

                        </table>


    		<table id="invoice_product_table_gst" style="table-layout:fixed;" class=" table table-condensed table-bordered hidden-load" hidden >
    		  <thead class="bg-primary">
    		    <tr>
    		      <th rowspan="2" class="lngwrap text-center">{% trans %}Product/Service{% endtrans %}</th>
    		      <th rowspan="2" class="smwrap text-center">{% trans %}HSN Code/ ACS code{% endtrans %}</th>
    		      <th rowspan="2" class="mdwrap text-center">{% trans %}Quantity{% endtrans %}</th>
    		      <th rowspan="2" class="mdwrap text-center">{% trans %}Free Quantity{% endtrans %}</th>
    		      <th rowspan="2" class="smwrap text-center">{% trans %}Rate{% endtrans %}</th>
    		      <th rowspan="2" class="smwrap text-center">{% trans %}Discount{% endtrans %}</th>
    		      <th rowspan="2" class="smwrap text-center">{% trans %}Taxable Value {% endtrans %}</th>
    		      <th colspan="2" class="taxwrap text-center">{% trans %}CGST{% endtrans %}</th>
    		      <th colspan="2" class="taxwrap text-center">{% trans %}SGST{% endtrans %}</th>

    		      <th rowspan="2" class="smwrap text-center">{% trans %}Total{% endtrans %}</th>

    		      </tr>

    		    <tr>
    		      <th>Rate%</th>
    		      <th>Amt</th>
    		      <th>Rate%</th>
    		      <th>Amt</th>

    		    </tr>
    		  </thead>
    		  <tbody>
    		    <tr>
    		      <td class="lngwrap">
    			<select class="form-control input-sm product_name_gst">
    			  <option value="" disabled hidden selected> Product</option>
    			  {% for product in products %}
    			    <option value="{{product['productcode']}}">{{product["productdesc"]}}</option>
    			  {% endfor %}
    			</select>
    		      </td>
    		      <td class="smwrap">

    			<label class="invoice_product_hsncode" >{% trans %} {% endtrans %} </label>
    		      </td>
    		      <td class="mdwrap">
    			<div class="input-group">
    			  <input type="text" class="invoice_product_quantity_gst form-control input-sm text-right numtype invdetails"size="5" value="0" placeholder="0" aria-describedby="unitaddon">
    			  <span class="input-group-addon input-sm" id="unitaddon"></span>
    			</div>
    		      </td>
    		      <td class="mdwrap">
    			<div class="input-group">
    			  <input type="text" class="invoice_product_freequantity_gst form-control input-sm text-right numtype invdetails" size="5" value="0" placeholder="0" aria-describedby="unitaddon">
    			  <span class="input-group-addon input-sm" id="freeunitaddon"></span>
    			</div>
    		      </td>

    		      <td class="mdwrap">
    			<input type="text" class="invoice_product_per_price_gst form-control input-sm text-right numtype invdetails" size="8" value="0.00" placeholder="0.00">
    		      </td>
    		      <td class="mdwrap">
    			<input type="text" class="invoice_product_discount_gst form-control input-sm text-right numtype invdetails" value="0.00" size="8" placeholder="0.00">
    		      </td>
    		      <td class="smwrap">
    			<input type="text" class="invoice_product_taxablevalue_gst form-control input-sm text-right numtype invdetails" value="0.00" size="8" placeholder="0.00" disabled>
    		      </td>

    		      <td class="ratewrap"><input type="text" class="invoice_product_cgstrate form-control input-sm text-right invdetails numtype ratewrap" size="6" value="0.00" placeholder="0.00" disabled></td>
    		      <td class="smwrap"><input type="text" class="invoice_product_cgstamount form-control input-sm text-right numtype invdetails smwrap" size="6" value="0.00" placeholder="0.00" disabled></td>

    		      <td class="ratewrap"><input type="text" class="invoice_product_sgstrate  form-control input-sm text-right numtype ratewrap invdetails" size="6" value="0.00" placeholder="0.00" disabled></td>
    		      <td class="smwrap"><input type="text" class="invoice_product_sgstamount  input-sm form-control text-right numtype smwrap invdetails" size="6" value="0.00" placeholder="0.00" disabled></td>

    			<td class="smwrap">
    			  <input type="text" class="invoice_product_total form-control input-sm invdetails text-right numtype smwrap" value="0.00" size="10" disabled>
    			</td>

    		    </tr>
    		  </tbody>
    		  <tfoot>
    		    <tr>
    		      <td colspan="5" class="text-right" style="vertical-align:middle; font-size:75%">Total</td>
    		      <td class="text-center">  <span id="discounttotal_product_gst" class="input-group-addon input-sm" size="8"></span></td>
    		      <td class="text-center"><span id="taxablevaluetotal_product_gst" class="input-group-addon input-sm" size="8"></span></td>
    		      <td colspan="2" class="text-center"><span id="totalcgst_product_gst" class="input-group-addon input-sm" size="8"></span></td>

    		      <td colspan="2" class="text-center"><span id="totalsgst_product_gst" class="input-group-addon input-sm" size="8"></span></td>


    		      <td class="text-center"><span id="total_product_gst" class="input-group-addon input-sm" size="8"></span></td>


    		    </tr>
    		  </tfoot>

    		</table>

    	      </div>
            <div class="col-md-4">
            <table class="table  table-condensed table-bordered table-striped hidden-load" hidden>
            <tbody>
            <h5>Bank Details:</h5>
            <tr>
              <td>  <label for="Account Number" style="font-size: 75%" class=" col-form-label col-form-label-sm" id="accountnolabel">{% trans %}Account No. :{% endtrans %}</label></td>
              <td colspan="2"><input type="text" id="accountno" class=" form-control input-sm" name="accountno" ></input></td>
            </tr>
            <tr>
              <td>  <label for="Bank Name" style="font-size: 75%" class=" col-form-label col-form-label-sm" id="banknamelabel">{% trans %}Bank Name :{% endtrans %}</label></td>
              <td colspan="2"><input type="text" id="bankname" class=" form-control input-sm" name="bankname" ></input></td>
            </tr>
            <tr>

              <td>  <label style="font-size: 75%" for="Bank Branch " class=" col-form-label col-form-label-sm" id="branchlabel">{% trans %}Branch Name:{% endtrans %}</label></td>
              <td colspan="2"><input type="text" id="branchname" class=" form-control input-sm" name="branchnae" ></input></td>

            </tr>
            <tr>

              <td>  <label style="font-size: 75%" for="IFSC code" class=" col-form-label col-form-label-sm" id="ifsclabel">{% trans %}IFSC code :{% endtrans %}</label></td>
              <td colspan="2"><input type="text" id="ifsc" class=" form-control input-sm" name="ifsc" ></input></td>

            </tr>
            </tbody>
            </table>

            </div>
            <div class="col-md-8" >
    		<h5>Total</h5>
    		<table class="table  table-condensed table-bordered table-striped">
    		  <tbody>

    		    <tr>
    		      <td>  <label style="font-size: 105%" for="total invoice value" class=" col-form-label col-form-label-sm" >{% trans %}Total Amount :{% endtrans %}</label></td>
    		      <td colspan="2"> <label style="font-size: 105%" for="total invoice value" class=" col-form-label col-form-label-sm" id="totalinvoicevalue"></td>
    		    </tr
    		  </tbody>
    		</table>

          </div>

          </div>
        </div>






  </div>
</div>

<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/viewcashmemo.js')}}"></script>
</body>
</html>
