<!DOCTYPE html>
<html lang="en">
<head>
  <title>GNUKhata | {{projectname}} Statement</title>
  <style type="text/css">

  td {
  	font-size: 65%;
  	color: black;
    word-wrap: break-word;
  }

  th {
  	font-size: 70%;
    word-wrap: break-word;
  }

  @page {
    size : 21cm 29.7cm;
    margin : 10mm 10mm 20mm 10mm
  }
  thead{
    display: table-header-group;
  }
  tfoot{
    display: table-footer-group;
  }

  </style>
</head>
<body>

	<div class="table-responsive printorgdetails">
    <table  class="table table-fixedheader  table-condensed shadow">
      <thead>
        <tr class="visible-print">
          <th id="printheader" colspan="8" style="text-align:center; font-size:80%;">
            List of Transactions
          </th>
        </tr>
				<tr>
            <th style="width:10%">V.No.</th>
            <th style="width:5%">Date</th>
            <th style="width:10%">Type</th>
            <th style="width:20%">Dr Accounts</th>
            <th style="width:20%">Cr Accounts</th>
            <th style="text-align:right; width:10%">Dr Amounts</th>
            <th style="text-align:right; width:10%">Cr Amounts</th>
            <th style="width:15%">Narration</th>

        </tr>
      </thead>
      <tbody>
        {% for vc in vouchers %}
        <tr  value="{{vc['vouchercode']}}">
            <td style="max-width:5px; word-wrap:break-word;">
              {{vc['vouchernumber']}}
            </td>
            <td style=" width:5%">
              {{vc['voucherdate']}}
            </td>
            {% if vc['vouchertype'] =="contra" %}
            <td style=" width:10%">
              Contra
            </td>
            {% elif vc['vouchertype'] == "payment" %}
            <td style=" width:10%">
              Payment
            </td>
            {% elif vc['vouchertype'] == "receipt" %}
            <td style=" width:10%">
              Receipt
            </td>
            {% elif vc['vouchertype'] == "journal" %}
            <td style=" width:10%">
              Journal
            </td>
            {% elif vc['vouchertype'] == "sales" %}
            <td style=" width:10%">
              Sales
            </td>
            {% elif vc['vouchertype'] == "purchase" %}
            <td style=" width:10%">
              Purchase
            </td>
            {% elif vc['vouchertype'] == "creditnote" %}
            <td style=" width:10%">
              Credit Note
            </td>
            {% elif vc['vouchertype'] == "debitnote" %}
            <td style=" width:10%">
              Debit Note
            </td>
            {% elif vc['vouchertype'] == "salesreturn" %}
            <td style=" width:10%">
              Sale Return
            </td>
            {% elif vc['vouchertype'] == "purchasereturn" %}
            <td style=" width:10%">
              Purchase Return
            </td>
            {% endif %}
            <td style=" width:20%">
              {{vc["drs"].keys()[0]}}
            </td>
            <td style=" width:20%">
              {{vc["crs"].keys()[0]}}
            </td>
            <td style="text-align:right; width:10%">
              {{vc["drs"][vc["drs"].keys()[0]]}}
            </td>
            <td style="text-align:right;width:10%">
              {{vc["crs"][vc["crs"].keys()[0]]}}
            </td>
            <td style="width:15%">{{vc['narration']}}</td>

        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <hr>
  <br>
  <div>
    <span class="hidden-print" style="margin:auto; display:table;">
      <button type="button" class="btn btn-sm btn-danger hidden-print" id="lotback" accesskey="b"><u>B</u>ack</button>
      <button type="button" class="btn btn-sm btn-info" id="lotprint" accesskey="t">Prin<u>t</u></button>
    </span>
  </div>
  <script type="text/javascript">
    $(document).ready(function() {
      $("title").html("GNUKhata")
      var search = $("#searchby option:selected").val();
      var heading;
      if (search=="type")
      {
        heading = " for Type: "+$("#vtype option:selected").text();

      }
      else if (search=="vnum")
      {
        heading = " for V.No. "+$("#vnum").val();

      }
      else if (search=="amount")
      {
        heading = " for Amount "+$("#amount").val();


      }
      else if (search=="date")
      {

        heading = " for Period: "+$("#fday").val()+"-"+$("#fmonth").val()+"-"+$("#fyear").val()+" to "+$("#tday").val()+"-"+$("#tmonth").val()+"-"+$("#tyear").val();



      }

      else if (search=="narration")
      {

        heading = " containing Narration: "+$("#narration").val();

      }


      $("#printheader").append(heading);
      $("#lotprint").click(function(event) {
        window.print();
      });
      $("#lotback").click(function(event) {
        $("#submit").click();
      });
    });
  </script>

</body>
</html>
