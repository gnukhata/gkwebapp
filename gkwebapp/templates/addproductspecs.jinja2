  <input type="text" id="numberofspecs" value="{{gkresult|length}}" hidden>
  {% if (gkresult|length)>0 %}
  <div class="col-sm-12 nopadding">
<div class="panel">
  <table id="spec_table" class="table table-condensed table-bordered fixed-table ">
    <thead class="bg-primary input-sm">
      <tr>
        <th class="col-xs-2 text-center">{% trans %}Specifications{% endtrans %}</th>
        <th class="col-xs-2 text-center">{% trans %}Value{% endtrans %}</th>
      </tr>
    </thead>
    <tbody>
  {% for spec in gkresult %}
  <tr>
    <td>
      <label for="{{spec['spcode']}}" class="">{{spec["attrname"]}}</label>
      <input type="text" class="spec_name" value="{{spec['spcode']}}" hidden>
    </td>
    <td>
      {% if spec["attrtype"]==0 %}

      <input type="text" class="form-control spec_value spec input-sm" id="{{spec['spcode']}}" placeholder="Alphanumeric">
      {% elif spec["attrtype"]==1 %}
      <input type="text" class="form-control spec_value spec input-sm numtype" id="{{spec['spcode']}}" placeholder="Numeric">
      {% elif spec["attrtype"]==2 %}
      <div class="form-inline">
        <div class="form-group ">
          <input type="text" class="form-control input-sm spec specday specdate" size="2" maxlength="2" placeholder="DD">
        </div>
        <div class="form-group ">
          <input type="text" class="form-control input-sm spec specmonth specdate" size="2" maxlength="2" placeholder="MM">
        </div>
        <div class="form-group">
          <input type="text" class="form-control input-sm spec specyear specdate" size="4" maxlength="4" placeholder="YYYY">
        </div>
      </div>
      <input type="text" class="spec_value datevalue" value="" hidden>
      {% endif %}
    </td>
  </tr>
  {% endfor %}
</tbody>
</table>
</div>
</div>
  {% endif %}
