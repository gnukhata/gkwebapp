<div id="m_serachcat" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="panel shadow" >
          <div class="panel-heading">
            <div class="panel-title">{% trans %}Search Category{% endtrans %}</div>
          </div>
          <div style="padding-top:5px" class="panel-body" >
            <table id="catsearchtab" class="table table-bordered table-condensed" data-toggle="table" data-show-toggle="true">
              <thead>
                <tr>
                  <th>
                    {% trans %}Category{% endtrans %}
                  </th>
                  <th>
                    {% trans %}Show Sub-Category{% endtrans %}
                  </th>
                  <th>
                    {% trans %}Show Products Under{% endtrans %}
                  </th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td class = "cols-md-6">
                    <select class = "form-control input-sm catsearch"  name = "categoryname" >
                      <option value="" disabled selected hidden>{% trans %}Select Category{% endtrans %}</option>
                      {% for topcat in gkresult %}
                      <option data-value="{{topcat['categorycode']}}">{{topcat["categoryname"]}}({{topcat["subcount"]}})</option>
                      {% endfor %}
                    </select>
                  </td>
                  <td class = "cols-md-3">
                    <button id="sub-cat" class="btn-primary btn-sm showcat">{% trans %}Show Category{% endtrans %}</button>
                  </td>
                  <td class = "cols-md-3">
                    <button id="catproduct" class="btn-primary btn-sm showprod">{% trans %}Show Product{% endtrans %}</button>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/searchcategory.js')}}"></script>
