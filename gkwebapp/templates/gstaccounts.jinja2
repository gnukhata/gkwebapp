  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="modal-title">
	  {% trans %}Add GST Accounts?{% endtrans %} :
        </div>
      </div>
      <div class="modal-body">
	<input type="hidden" id="groupcode" value="{{groupcode}}">
	<div class="alert alert-danger" id="gstin-blank-alert"  aria-live="rude" role="alert" hidden>
	  {% trans %}Please Enter Tax Rate.{% endtrans %}	
	</div>
        <div class="panel">
	  <div class="panel-body gstinclass">
	    <table id="gstaccountstable" class="table table-condensed table-bordered fixed-table">
	      <thead class="bg-primary input-sm">
		<tr>
		  <th class="col-xs-7 text-center">{% trans %}Tax Name & State{% endtrans %}</th>
		  <th class="col-xs-4 text-center">{% trans %}Rate{% endtrans %}</th>
		  <th class="col-xs-1"></th>
		</tr>
	      </thead>
	      <tbody>
		{% if accounts %}
		  {% for account in accounts %}
		    <tr>
		      <td class="col-xs-7">
			{{account}}@
		      </td>
		      <td class="col-xs-4">
			<div class="form-inline nopadding">
			  <div class="form-group nopadding">
			    <input type="text" class="form-control input-sm nopadding taxrate" value="0.00" >
			  </div>
			</div>
		      </td>
		      <td class="col-xs-1">
			<a href="#" class="account_del"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span><span class="sr-only">Delete Button</span> </a>
		      </td>
		    </tr>
		  {% endfor %}
		{% endif %}
	      </tbody>
	    </table>
	    <div>
	      <small id="donehelp" class="form-text text-muted"> Press 'Esc' when you are done.</small>
            </div>
	  </div>
          
	</div>

	<div class="panel-footer">
	  <div class="container-fluid">
	    <button class="btn btn-success btn-sm" id="gstaccounts_done" data-toggle="tooltip" data-placement="top" ><i class="fa fa-check" aria-hidden="true" accesskey="d"></i>{% trans %} <u>D</u>one{% endtrans %}</button>
	  </div>
	</div>
      </div>
    </div>
  </div>
