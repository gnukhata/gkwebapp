<!DOCTYPE html>
<html>
<head>

	<link rel="stylesheet" type="text/css" media="screen" href="{{request.static_url('gkwebapp:static/css/bootstrap.min.css')}}" />
	<title>
		GNUKhata
	</title>

	<style>
	.login-box{
		background-color: rgba(220, 225,225,0.4);
	}

	</style>

</head>
<body>
<div class="container">


		<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3">
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">Create Admin</div>

				</div>

				<div style="padding-top:30px" class="panel-body" >


					<form id="loginform" method="post"  action="createorglogin" class="form-horizontal">

						<div style="margin-bottom: 25px" class="col-xs-12 from-group">

							<input type="text" id="username" class="form-control" name="username" placeholder="Username"></input>
							<br/>
							<input type="password" id="password" class="form-control" name="password" placeholder="Password"></input>
							<br/>
							<input type="password" name="confirmpassword" id="confirmpassword" class="form-control" value="" placeholder="Confirm Password"></input>
							<br/>
							<input type="text" class="form-control" value="" id="securityquestion" name="securityquestion" placeholder="Security Question"></input>
							<br/>
							<input type="text" class="form-control" value="" id="securityanswer" name="securityanswer" placeholder="Security Answer"></input>
							<input type="hidden" class="form-control" value="{{orgname}}" id="orgname" name="orgname"></input>
							<input type="hidden" class="form-control" value="{{orgtype}}" id="orgtype" name="orgtype"></input>
							<input type="hidden" class="form-control" value="{{fromdate}}" id="yearstart" name="yearstart"></input>
							<input type="hidden" class="form-control" value="{{todate}}" id="yearend" name="yearend"></input>
							<br/>
							<button type="submit" class="btn btn-success">Create & Login</button>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script src="{{request.static_url('gkwebapp:static/js/jquery-2.2.0.min.js')}}"></script>
	<script src="{{request.static_url('gkwebapp:static/js/bootstrap.min.js')}}"></script>
<script>
$(document).ready(function()
{
alert("document is ready ");
$("#loginform").submit(function(e)
{
alert("submit in process");
    $.ajax(
    {
    //alert("starting ajax");
    type: "POST",
    url: "/createorglogin",
    global: false,
    async: false,
    datatype: "json",
    data: $("#loginform").serialize(),
    success: function(resp)
    {
    var gt = resp['gktoken'];
    alert(gt);
    }
    
    }
    );
    e.preventDefault();
}
);
}
);
</script>


</body>

</html>
