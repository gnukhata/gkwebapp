<!DOCTYPE html>
<html>
<head>

	<link rel="stylesheet" type="text/css" media="screen" href="{{request.static_url('gkwebapp:static/css/bootstrap.min.css')}}" />
	<title>
		GNUKhata
	</title>

	<style>
	.login-box{
		background-color: rgba(220, 225,225,0.4);
	}

	</style>

</head>
<body>
<div class="container">


		<div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3">
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">Create Admin</div>

				</div>

				<div style="padding-top:30px" class="panel-body" >


					<form id="loginform" class="form-horizontal">

						<div style="margin-bottom: 25px" class="col-xs-12 from-group">

							<input type="text" id="username" class="form-control" name="username" placeholder="Username"></input>
							<br/>
							<input type="password" id="password" class="form-control" name="password" placeholder="Password"></input>
							<br/>
							<input type="password" name="cnfpassword" id="cnfpassword" class="form-control" value="" placeholder="Confirm Password"></input>
							<br/>
							<input type="text" class="form-control" value="" id="secquestion" name="secquestion" placeholder="Security Question"></input>
							<br/>
							<input type="text" class="form-control" value="" id="secans" name="secans" placeholder="Security Answer"></input>
							<br/>
							<button type="submit" class="btn btn-success">Create & Login</button>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
	<script src="{{request.static_url('gkwebapp:static/js/jquery-2.2.0.min.js')}}"></script>
	<script src="{{request.static_url('gkwebapp:static/js/bootstrap.min.js')}}"></script>


</body>

</html>
