<body>
  <table id="latable" class="table shadow table-bordered" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true" >
    <thead class="bg-info">
      <tr>
        <th class="col-xs-1" >
          {% trans %}Sr. No.{% endtrans %}
        </th>
        <th class="col-xs-3" >
          {% trans %}Godown Name{% endtrans %}
        </th>
        <th class="col-xs-6" >
          {% trans %}Group Addess{% endtrans %}
        </th>
        <th class="col-xs-2" >
          {% trans %}Status{% endtrans %}
        </th>
      </tr>
    </thead>
    <tbody>

      {% for record in gkresult %}
      <tr	value="{{record["godownid"]}}">
        <td class="col-xs-1 " >
          {{record["srno"]}}
        </td>
        <td class="col-xs-3">
          <a class="libgname" href="">{{record["godownname"]}}</a>
        </td>
        <td class="col-xs-6" >
          {{record["godownaddress"]}}
          <br>
          {{record["godownstate"]}}
        </td>
        {% if record["godownstatus"] == "Active" %}
        <td class="col-xs-2 text-success">
          {{record["godownstatus"]}}
        </td>
        {% else %}
        <td class="col-xs-2 text-danger">
          {{record["godownstatus"]}}
        </td>
        {% endif %}
      </tr>
      {% endfor %}

    </tbody>
  </table>
  <span style="margin:auto; display:table;">
    <nbsp><nbsp>
    <button class="btn btn-sm btn-primary" type="button"  id="print" accesskey="x">{% trans %}E<u>x</u>port to Spreadsheet{% endtrans %}</button>
      <button type="button" class="btn btn-sm btn-info" id="viewprintableversion" accesskey="t">{% trans %}View Prin<u>t</u>able Version{% endtrans %}</button>
  </span>
</body>
<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/listofgodowns.js')}}"></script>
