<!DOCTYPE html>
<html lang="en">
<head>
  {% if orgtype=="Profit Making" %}
    <title>{% trans %}GNUKhata{% endtrans %} | {% trans %}Profit & Loss{% endtrans %}</title>
  {% else %}
    <title>{% trans %}GNUKhata{% endtrans %} | {% trans %}Income & Expenditure{% endtrans %}</title>
  {% endif %}

<style type="text/css">
.shadow {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
#incometbl td,#expensetbl td {
  font-size: 75%;
  padding: 4 !important;
  margin: 4 !important;
}
#incometbl th,#expensetbl th {
  font-size: 85%;
}

.card-view .title {
  font-weight: bold;
  display: inline-block;
  min-width: 30%;
  text-align: left !important;
}
.fixed-table tbody {
  display:block;
  height: calc(100vh - 16em);
  overflow-y:scroll;
}
.fixed-table thead,.fixed-table tbody tr {
  display:table;
  width:100%;
  table-layout:fixed;
}
.fixed-table thead {
  width: calc( 100% - 0.8em );
}
.nopadding{
	padidng:0 !important;
	padding:0 !important;
}
.ralign{
  text-align:right;

}
.cred{
  color:red;
}
.calign{
  text-align:center;
}
.row {
  margin-top: 5px;
}
</style>
</head>
<body>
  {% if orgtype=="Profit Making" %}
    <input type="hidden" id="headingprofit" value="Profit & Loss">
    <span class="hidden-print" style="margin:auto; display:table;"><strong>{% trans %}Profit & Loss Account{% endtrans %}</strong> {% trans %}for the period{% endtrans %} <strong>{{from}}</strong> {% trans %}to{% endtrans %} <strong>{{to}}</strong></span>
  {% else %}
      <input type="hidden" id="headingprofit" value="Income & Expenditure Account">
    <span class="hidden-print" style="margin:auto; display:table;"><strong>{% trans %}Income & Expenditure Account{% endtrans %}</strong> {% trans %}for the period{% endtrans %} <strong>{{from}}</strong> {% trans %}to{% endtrans %} <strong>{{to}}</strong></span>
  {% endif %}
  <div class="row">
    <div class="table-responsive col-xs-6 nopadding">
      <button class="btn btn-sm btn-danger pull-left" type="button" style="margin-right: 15px;" id="pllclearfields">{% trans %}Clear Search{% endtrans %}<span class="glyphicon glyphicon-remove" style="margin-left: 5px;"></span></button>
      <table id="expensetbl" class="shadow fixed-table table table-condensed cashflowtable" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true">
        <thead class="bg-primary">
          <tr >
            <th colspan="3" class="visible-print text-left col-xs-12" style="font-size:80%">
              {% if orgtype=="Profit Making" %}
                {% trans %}Profit & Loss Account{% endtrans %}
              {% else %}
              {% trans %}Income & Expenditure Account{% endtrans %}
              {% endif %}
            </th>
          </tr>
          <tr>
            <th class="col-xs-1">&nbsp</th>
            <th class="col-xs-9">{% trans %}Particulars{% endtrans %}</th>
            <th class="col-xs-2 ralign">{% trans %}Amount{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
          {% for rcrecord in expense %}
          <tr  data-value="{{rcrecord['accountcode']}}">
            <td class="col-xs-1">
              {{rcrecord['toby']}}
            </td>
            <td class="col-xs-9">
              {% if rcrecord['accountcode']!="" %}
              <a class="rcaccname" href="#">{{rcrecord['accountname']}}</a>
              {% else %}
              <a class="rcaccname" href="#" style="text-decoration: none;">{{rcrecord['accountname']}}</a>
              {% endif %}
            </td>
            {% if rcrecord["amount"]=="." %}
            <td class="col-xs-2 ralign">&nbsp</td>
            {% else %}
            <td class="col-xs-2 ralign">
              {{rcrecord["amount"]}}
            </td>
            {% endif %}
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
    <div class="table-responsive col-xs-6 nopadding">
      <button class="btn btn-sm btn-danger pull-right" type="button" style="margin-right: 15px;" id="plrclearfields">{% trans %}Clear Search{% endtrans %}<span class="glyphicon glyphicon-remove" style="margin-left: 5px;"></span></button>
      <table id="incometbl" class="shadow table fixed-table table-condensed cashflowtable" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true">
        <thead class="bg-primary">
          <tr >
            <th colspan="3" class="visible-print text-right col-xs-12" style="font-size:80%">
              {% trans %}Period{% endtrans %}: {{from}} {% trans %}to{% endtrans %} {{to}}
            </th>
          </tr>
          <tr>
            <th class="col-xs-1">&nbsp</th>
            <th class="col-xs-9">{% trans %}Particulars{% endtrans %}</th>
            <th class="col-xs-2 ralign">{% trans %}Amount{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
          {% for pyrecord in income %}
          <tr  data-value="{{pyrecord['accountcode']}}">
            <td class="col-xs-1">
              {{pyrecord['toby']}}
            </td>
            <td class="col-xs-9">
              {% if pyrecord['accountcode']!="" %}
              <a class="pyaccname" href="#">{{pyrecord['accountname']}}</a>
              {% else %}
              <a class="pyaccname" href="#" style="text-decoration: none;">{{pyrecord['accountname']}}</a>
              {% endif %}
            </td>
            {% if pyrecord["amount"]=="." %}
            <td class="col-xs-2 ralign">&nbsp</td>
            {% else %}
            <td class="col-xs-2 ralign">
              {{pyrecord["amount"]}}
            </td>
            {% endif %}
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>

  </div>
  <span class="hidden-print" style="margin:auto; display:table;">
    <button type="button" class="btn btn-sm btn-danger" id="pnlback" accesskey="b">{% trans %}<u>B</u>ack{% endtrans %}</button>
    <button class="btn btn-sm btn-primary" type="button"  id="print" accesskey="x">{% trans %}E<u>x</u>port to Spreadsheet{% endtrans %}</button>
    <button class="btn btn-sm btn-primary" type="button"  id="printpnl" accesskey="t">{% trans %}View Prin<u>t</u>able Version{% endtrans %}</button>
    <button class="btn btn-sm btn-primary" type="button"  id="realprintpnl" accesskey="t">{% trans %}Prin<u>t</u>{% endtrans %}</button>
  </span>
  <input type="hidden" id="ledtodate" value="{{to}}">
  <input type="hidden" id="ledfromdate" value="{{from}}">
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/profitlossreport.js')}}"></script>
</body>
</html>
