<!DOCTYPE html>
<html lang="en">
<head>
	<title>{% trans %}GNUKhata{% endtrans %} | {% trans %}Net Trial Balance{% endtrans %}</title>
<style type="text/css">
.shadow {
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
#ntbtable td {
	font-size: 75%;
	padding: 4 !important;
	margin: 4 !important;
}

#ntbtable th {
	font-size: 85%;
}
.card-view .title {
		font-weight: bold;
		display: inline-block;
		min-width: 30%;
		text-align: left !important;
}

#ntbtable tbody {
		display:block;
		height: calc(100vh - 16em);
		overflow-y:scroll;
}
#ntbtable thead,#ntbtable tbody tr {
		display:table;
		width:100%;
		table-layout:fixed;
}
#ntbtable thead {
		width: calc( 100% - 0.65em )
}
.ralign{
	text-align:right;

}
.cred{
	color:red;
}
.calign{
	text-align:center;
}

</style>
</head>
<body>
	<span style="margin:auto; display:table;"><strong>{% trans %}Net Trial Balance{% endtrans %}</strong> {% trans %}for the period from{% endtrans %} <strong>{{from}}</strong> {% trans %}to{% endtrans %} <strong>{{to}}</strong></span>
	<div class="row">
		<table id="ntbtable" class="table shadow table-bordered trialbaltable" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true" >
			<button class="btn btn-sm btn-danger pull-right" type="button" style="margin-right: 15px;" id="ntbclearfields">{% trans %}Clear Search{% endtrans %}<span class="glyphicon glyphicon-remove" style="margin-left: 5px;"></span></button>
			<thead class="bg-info">
				<tr>
					<th class="col-xs-1">{% trans %}Sr. No.{% endtrans %}</th>
					<th class="col-xs-5">{% trans %}Account Name{% endtrans %}</th>
					<th class="col-xs-2 ralign">{% trans %}Debit{% endtrans %}</th>
					<th class="col-xs-2 ralign">{% trans %}Credit{% endtrans %}</th>
					<th class="col-xs-2 calign" >{% trans %}Group Name{% endtrans %}</th>
				</tr>
			</thead>
			<tbody>
				{% for record in records %}
				<tr	data-value="{{record['accountcode']}}">
					<td class="col-xs-1">
						{{record['srno']}}
					</td>
					<td class="col-xs-5">
						{% if record['srno']!="" %}
							<a class="accname" href="">{{record['accountname']}}</a>
						{% else %}
						{% if record['accountname']=="" %}
						<a class="accname" href="">&nbsp</a>
						{% else %}
						<a class="accname" href="" style="text-decoration: none;">{{record['accountname']}}</a>
						{% endif %}
						{% endif %}
					</td>

					{%if record["advflag"]==1%}
					<td class="col-xs-2  ralign cred">
						<b>{{record["Dr"]}}</b>
					</td>
					<td class="col-xs-2 ralign cred" >
						<b>{{record["Cr"]}}</b>
					</td>
					{%else%}
					<td class="col-xs-2 ralign" >
						{{record["Dr"]}}
					</td>
					<td class="col-xs-2 ralign">
						{{record["Cr"]}}
					</td>
					{%endif%}
					<td class="col-xs-2 calign">
						{{record["groupname"]}}
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<span style="margin:auto; display:table;">
		<button type="button" class="btn btn-sm btn-primary" id="gtbview" accesskey="g">{% trans %}<u>G</u>ross Trial Balance{% endtrans %}</button>
		<button type="button" class="btn btn-sm btn-warning" id="extbview" accesskey="e">{% trans %}<u>E</u>xtended Trial Balance{% endtrans %}</button>
		<button type="button" class="btn btn-sm btn-danger" id="tbback" accesskey="b">{% trans %}<u>B</u>ack{% endtrans %}</button>
		<button type="button" class="btn btn-sm btn-info" id="printbutton" accesskey="x">{% trans %}E<u>x</u>port to Spreadsheet{% endtrans %}</button>
		<button type="button" class="btn btn-sm btn-info" id="viewprintableversion" accesskey="t">{% trans %}View Prin<u>t</u>able Version{% endtrans %}</button>
	</span>
	<input type="hidden" id="ledtodate" value="{{to}}">
	<input type="hidden" id="trialbaltype" value="{{trialbalancetype}}">
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/trialbalancereport.js')}}"></script>
</body>
</html>
