<body>
<div class="container-fluid" style="padding: 1 !important; margin: 0 !important;">
    <div class="alert alert-success" id="success-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Category saved.{% endtrans %}
    </div>
    <div class="alert alert-danger" id="failure-alert"  aria-live="rude" role="alert" hidden>

      {% trans %}Something went wrong!{% endtrans %}
    </div>

    <div class="panel shadow category_panel">
      <div class="panel-body">
        <div class="col-md-5">
          <div class="alert alert-danger" id="category-blank-alert"  aria-live="rude" role="alert" hidden>

            <label for="vno">{% trans %}Please enter category name!{% endtrans %}</label>
          </div>
        <form>
          <div class="form-group">
            <label for="category_name">{% trans %}N<u>a</u>me :{% endtrans %}</label>
            <input class="form-control input-sm" id="category_name" placeholder="{% trans %}Enter category name{% endtrans %}" accesskey="a">
          </div>
          <div class="form-group">
            <label for="category_tax_vat">{% trans %}<u>V</u>AT :{% endtrans %}</label>
            <div class="input-group">
              <input class="form-control input-sm" id="category_tax_vat" aria-describedby="vat_help" placeholder="VAT" accesskey="v">
              <div class="input-group-addon">%</div>
            </div>
            <small id="vat_help" class="form-text text-muted">{% trans %}Enter VAT% if applicable.{% endtrans %}</small>
          </div>
          <div class="form-group">
            <label for="category_under">{% trans %}Un<u>d</u>er :{% endtrans %}</label>
            <select class="form-control input-sm" id="category_under" accesskey="d">
              <option value="" selected>None</option>
              {% for categories in gkresult %}
              <option value="{{categories['categorycode']}}">{{categories["categoryname"]}} ({{categories["subcount"]}})</option>
              {% endfor %}
            </select>
          </div>
        </form>
      </div>
      <div class="col-md-7" id="category_spec_div" hidden>
        <div class="alert alert-danger" id="spec-blank-alert"  aria-live="rude" role="alert" hidden>

          <label for="vno">{% trans %}Please enter specification name!{% endtrans %}</label>
        </div>
          <table id="category_spec_table" class="table table-condensed table-fixedheader">
            <thead>
              <tr>
                <th class="col-xs-9">{% trans %}Spec Name{% endtrans %}</th>
                <th class="col-xs-2">{% trans %}Type{% endtrans %}</th>
                <th class="col-xs-1">{% trans %}Remove{% endtrans %}</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td class="col-xs-9">
                  <input type="text" id="category_spec_name" class="form-control input-sm spec_name" placeholder="Spec Name">
                </td>
                <td class="col-xs-2">
                  <select id="category_spec_type" class="form-control input-sm spec_type" name="">
                    <option value="0">Text</option>
                    <option value="1">Number</option>
                    <option value="2">Date</option>
                    <option value="3">Option</option>
                  </select>
                </td>
                <td class="col-xs-1">
                  <a href="#" class="spec_del"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
              </tr>
            </tbody>
          </table>
        </div>

      </div>
      <div class="panel-footer">
        <button class="btn btn-primary btn-sm" id="category_addspecs" accesskey="s">{% trans %}Add <u>S</u>pecifications{% endtrans %}</button>
        <button class="btn btn-success btn-sm" id="category_savespecs" accesskey="e">{% trans %}Sav<u>e</u>{% endtrans %}</button>
      </div>
    </div>
    </div>

</div>
<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/addcategory.js')}}"></script>
</body>
