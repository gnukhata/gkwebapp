<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>{% trans %}GNUKhata{% endtrans %} | {% trans %}Edit Godown{% endtrans %}</title>
<style media="screen">
.shadow {
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
td {
	font-size: 80%;
}

th {
	font-size: 70%;
}

.nopadding {
	 padding: 0 !important;
	 margin: 0 !important;
}
</style>
</head>
<body >
	<div class="container-fluid">
		<div class="alert alert-success" id="success-alert"  aria-live="rude" role="alert" hidden>
			<a href="" class="close" aria-label="close">&times;</a>
			{% trans %}Godown edited successfully.{% endtrans %}
		</div>

		<div class="alert alert-success" id="delsuccess-alert"  aria-live="rude" role="alert" hidden>
			<a href="" class="close" aria-label="close">&times;</a>
			{% trans %}Godown deleted successfully.{% endtrans %}
		</div>

		<div class="alert alert-danger" id="failure-alert"  aria-live="rude" role="alert" hidden>
			<a href="" class="close" aria-label="close">&times;</a>
			{% trans %}Godown could not be edited.{% endtrans %}
		</div>
		<div class="alert alert-danger" id="blank-alert"  aria-live="rude" role="alert" hidden>

			{% trans %}Please enter godown name!{% endtrans %}
		</div>

    <div class="alert alert-danger" id="addressblank-alert"  aria-live="rude" role="alert" hidden>

			{% trans %}Please enter address!{% endtrans %}
		</div>

		<div class="alert alert-danger" id="contactblank-alert"  aria-live="rude" role="alert" hidden>

			{% trans %}Please enter contact!{% endtrans %}
		</div>

		<div class="alert alert-danger" id="duplicate-alert"  aria-live="rude" role="alert" hidden>

			{% trans %}Godown already exists!{% endtrans %}
		</div>

		<div class="alert alert-danger" id="transaction-alert"  aria-live="rude" role="alert" hidden>

			{% trans %}Godown cannot be deleted!{% endtrans %}
			{% trans %}Goods might be there in this godown.{% endtrans %}
		</div>

		<div style="padding-top:15px" class="mainbox col-md-6">
			<div class="panel shadow" >
				<div class="panel-heading">
					<div class="panel-title">{% trans %}Edit Godown{% endtrans %}</div>

				</div>

				<div style="padding-top:5px" class="panel-body" >

          <label for="editgodownname" id="godname">{% trans %}Godown Name{% endtrans %} :</label>
          <select class = "form-control input-sm" id="editgoddet"  name = "editgodownname" >
            <option value="" disabled selected hidden>{% trans %}Select Godown{% endtrans %}</option>
            {% for gods in gkresult %}
            <option value="{{gods['godownid']}}">{{gods["godownname"]}}</option>
            {% endfor %}
          </select>
					<br>
					<form id="editgodownform" method="post"  action="editgodown" class="form-horizontal" hidden>

						<div style="margin-bottom: 5px" class="col-xs-12 from-group">
							<label for="godownname" id="godownname">{% trans %}Godown Name{% endtrans %} :</label>
							<input type="text" id="goname" name="goname" class="form-control input-sm" value=""></input>
							<br/>
							<label for="godownaddress" id="godownaddress">{% trans %}Godown Address{% endtrans %} :</label>
							<input type="text" id="goaddress" name="goaddress" class="form-control input-sm" value=""></input>
							</br>
							<label for="godowncontact" id="godowncontact">{% trans %}Godown Contact{% endtrans %} :</label>
							<input type="text" id="gocontact" class="form-control input-sm" name="gocontact"></input>
							</br>
							<input type="hidden" id="goid" class="form-control" name="goid" ></input>

							<button type="submit" class="btn btn-primary btn-sm" id="submit" name="submit" accesskey="s">{% trans %}<u>S</u>ave{% endtrans %}</button>
							<button id="reset" class="btn btn-warning btn-sm" accesskey="e">{% trans %}R<u>e</u>set{% endtrans %}</button>
							<button id="delete" class="btn btn-danger btn-sm" accesskey="d">{% trans %}<u>D</u>elete{% endtrans %}</button>
							<button id="edit" class="btn btn-danger btn-sm" accesskey="t">{% trans %}Edi<u>t</u>{% endtrans %}</button>

						</div>
					</form>
					<div id="m_confirmdel" class="modal fade" tabindex="-1" role="dialog">
						<div class="vertical-alignment-helper">
							<div class="modal-dialog modal-sm vertical-align-center">
								<div class="modal-content">
									<div class="modal-header">

										<h4 class="modal-title">{% trans %}Delete?{% endtrans %}</h4>
									</div>
									<div class="modal-body">
										<p>{% trans %}Are you sure?{% endtrans %}</p>
									</div>
									<div class="modal-footer">
										<button type="button" id ="m_cancel" class="btn btn-warning" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
										<button type="button" id="goddel" data-dismiss="modal" class="btn btn-danger">{% trans %}Delete{% endtrans %}</button>
									</div>
								</div><!-- /.modal-content -->
							</div><!-- /.modal-dialog -->
						</div>
					</div><!-- /.modal -->

				</div>
			</div>
		</div>



	</div>
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/jquery.validate.min.js')}}"></script>
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/editgodown.js')}}"></script>
</body>
</html>
