<!DOCTYPE html>
<html lang="en">
<head>
  <title>{% trans %}GNUKhata{% endtrans %} | {% trans %}Stock on Hand Report{% endtrans %}</title>

  <style type="text/css">
  .shadow {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
  
  #latable td {
    font-size: 75%;
    padding: 4 !important;
    margin: 4 !important;
  }

  #latable th {
    font-size: 85%;
  }

  .card-view .title {
      font-weight: bold;
      display: inline-block;
      min-width: 30%;
      text-align: left !important;
  }

  #latable tbody {
      display:block;
      height: calc(100vh - 18em);
      overflow-y:scroll;
      height: auto !important;
  }
  #latable thead,#latable tbody tr {
      display:table;
      width:100%;
      table-layout:fixed;
      height: auto !important;
  }
  #latable thead {
      width: calc( 100% - 0.65em );
      
  }

  .rightlist {
    text-align: right;
  }
.size{
	width: 400px;
	
}


  </style>
</head>
<body>
  <input type="hidden" id="productcode" name="productcode" value="{{stockrefresh["productcode"]}}"></input>
  <input type="hidden" id="productdesc" name="productdesc" value="{{stockrefresh["productdesc"]}}"></input>
 
  <input type="hidden" id="calculateto" name="calculateto" value="{{stockrefresh["calculateto"]}}"></input>
  
  <input type="hidden" id="godownflag" name="godownflag" value="{{stockrefresh["godownflag"]}}"></input>
  <input type="hidden" id="goid" name="goid" value="{{stockrefresh["goid"]}}"></input>
  <input type="hidden" id="goname" name="goname" value="{{godown}}"></input>

  <span class="pull-right" style="padding-right:15px"><i>{% trans %}Stock as on{% endtrans %}</i> : {% trans %}to{% endtrans %} <strong>{{stockrefresh["calculateto"]}}</strong></span>
  {% if godown == "" %}
  <span style="margin:auto; display:block; width:100px"><i>{% trans %}Stock on Hand Report{% endtrans %}</i></span>
  <span style="margin:auto; display:table;"><i>{% trans %}Name of the Product{% endtrans %}: </i><strong>{{stockrefresh["productdesc"]}}</strong></span>
  {% else %}
  <span style="margin:auto; display:block; width:200px"><i>{% trans %}Godown Wise Stock on Hand Report{% endtrans %}</i></span>
  <span style="margin:auto; display:table;"><i>{% trans %}Name of the Product{% endtrans %}: </i><strong>{{stockrefresh["productdesc"]}}</strong><i>  {% trans %}Name of the Godown{% endtrans %}: </i><strong>{{godown}}</strong></span>
  {% endif %}

	<div class="row">
    <button class="btn btn-sm btn-danger pull-right" type="button" style="margin-right: 15px;" id="lclearfields">{% trans %}Clear Search{% endtrans %}<span class="glyphicon glyphicon-remove" style="margin-left: 5px;"></span></button>	
 <div class="row">
  <table id="latable"  class="table shadow table-bordered size" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true" >
    
    <thead class="bg-primary">
  
    <tr>
     <th class="col-xs-1" >
            {% trans %}Sr. No.{% endtrans %}
          </th>
		{% if godown == "" and stockrefresh["productdesc"]== "all" %}
        <th class="col-xs-1" >
          {% trans %}Product Name{% endtrans %}
        </th>
         
        <th class="col-xs-1 rightlist" >
          {% trans %}Balance{% endtrans %}
        </th>
        {% endif %}
        {% if godown == "" and stockrefresh["productdesc"]== "all"%}
        <th class="col-xs-1" >
          {% trans %}Product Name{% endtrans %}
        </th>
         
        <th class="col-xs-1 rightlist" >
          {% trans %}Balance{% endtrans %}
        </th>
        {% endif %}
        {% if godown == "All godowns" and stockrefresh["productdesc"] != "all"%}
        <th class="col-xs-1" >
          {% trans %}Product Name{% endtrans %}
        </th>
         <th class="col-xs-1" >
          {% trans %}Godown Name{% endtrans %}
        </th>
        <th class="col-xs-1 rightlist" >
          {% trans %}Balance{% endtrans %}
        </th>
         {% endif %}
        {% if godown != "allgod" and godown != "" and stockrefresh["productdesc"] == "all" %}
        <th class="col-xs-1" >
          {% trans %}Product Name{% endtrans %}
        </th>
         <th class="col-xs-1 rightlist" >
          {% trans %}Balance{% endtrans %}
        </th>
		 {% endif %}

      </tr>
    </thead>
    <tbody>

    {% for record in gkresult %}
    <tr>
    <td class="col-xs-1 " >
          {{record["srno"]}}
        </td>
        {% if godown == "" %}
    <td class="col-xs-1 " >
          {{record["productname"]}}
        </td>
     <td class="col-xs-1 " >
          {{record["balance"]}}
        </td>
        {% endif %}
        {% if godown == "" and stockrefresh["productdesc"]== "all"%}
        <td class="col-xs-1 " >
          {{record["productname"]}}
        </td>
     <td class="col-xs-1 " >
          {{record["balance"]}}
        </td>
        {% endif %}
        {% if godown == "All godowns" %}
        
         <td class="col-xs-1 " >
          {{record["productname"]}}
        </td>
         <td class="col-xs-1 " >
          {{record["godown"]}}
        </td>
     <td class="col-xs-1 " >
          {{record["balance"]}}
        </td>
        
        {% endif %}
         {% if godown != "All godowns" and godown != "" %}

         <td class="col-xs-1 " >
          {{stockrefresh["productdesc"]}}
        </td>
     <td class="col-xs-1 " >
          {{record["balance"]}}
        </td>
        {% endif %}
</tr>
        {% endfor %}

          </tbody> 
          
  </table>
  </div>
  </div>
  
  <span style="margin:auto; display:table;">
    <nbsp><nbsp>
      <button type="button" class="btn btn-sm btn-danger" id="viewanotherstock" accesskey="w">{% trans %}Vie<u>w</u> Another Stock{% endtrans %}</button>
    <button class="btn btn-sm btn-primary" type="button"  id="print" accesskey="x">{% trans %}E<u>x</u>port to Spreadsheet{% endtrans %}</button>
      <button type="button" class="btn btn-sm btn-info" id="viewprintableversion" accesskey="t">{% trans %}View Prin<u>t</u>able Version{% endtrans %}</button>
  </span>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/showstockonhandreport.js')}}"></script>
</body>
</html>
