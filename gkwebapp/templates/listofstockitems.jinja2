<!DOCTYPE html>
<html lang="en">
<head>
  <title>{% trans %}GNUKhata{% endtrans %} | {{projectname}} {% trans %}Statement{% endtrans %}</title>

  <style type="text/css">
  .shadow {
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
  #latable td {
    font-size: 75%;
    padding: 4 !important;
    margin: 4 !important;
  }

  #latable th {
    font-size: 85%;
  }

  .card-view .title {
      font-weight: bold;
      display: inline-block;
      min-width: 30%;
      text-align: left !important;
  }

  #latable tbody {
      display:block;
      height: calc(100vh - 16em);
      overflow-y:scroll;
  }
  #latable thead,#latable tbody tr {
      display:table;
      width:100%;
      table-layout:fixed;
  }
  #latable thead {
      width: calc( 100% - 0.65em );
  }
  .rightlist {
    text-align: right;
  }
 .srno{
    width:5.4%;
 }
 .prdct{
    width: 59%;
 }
 .type{
    width: 8%;
 }
 .categrs{
    width: 20%;
 }
 .um{
    width: 7%;
 }

 .calign{
   text-align:center;
 }
  </style>
</head>
<body>
  <span style="margin:auto; display:table; font-size:120%;"><strong>
      {% trans %}List of Products{% endtrans %}
  </strong></span>
  <button class="btn btn-sm btn-danger pull-right" type="button" style="margin-right: 15px;display:none;" id="laclearfields">{% trans %}Clear Search{% endtrans %}<span class="glyphicon glyphicon-remove" style="margin-left: 5px;"></span></button>
  <table id="latable" class="table shadow table-bordered" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true" >
    <thead class="bg-primary">
      <tr>
        <th class="col-xs-1 srno calign" >
          {% trans %}Sr.No.{% endtrans %}
        </th>
        <th class="col-xs-5 prdct prdserv" >
          {% trans %}Product{% endtrans %}
        </th>
        <th class="col-xs-2 type" >
          {% trans %}Type{% endtrans %}
        </th>
        <th class="col-xs-3 categrs" >
          {% trans %}Category{% endtrans %}
        </th>
        <th class="col-xs-2 um" >
          {% trans %}UOM{% endtrans %}
        </th>
      </tr>
    </thead>
    <tbody>

      {% for record in gkresult %}
      <tr	value="{{record["productcode"]}}">
        <td class="col-xs-1 srno calign" >
          {{record["srno"]}}
        </td>
        <td class="col-xs-5 prdct">
          {{record["productdesc"]}}
        </td>

        <td class="col-xs-3 type" >
          {% if record['gsflag'] == 7 %}
          Product
          {% else %}
          Service
          {% endif %}
        </td>
        <td class="col-xs-3 categrs" >
          {{record["categoryname"]}}
        </td>
        <td class="col-xs-2 um" >
          {{record["unitname"]}}
        </td>
      </tr>
      {% endfor %}

    </tbody>
  </table>
  <span style="margin:auto; display:table;">
    <nbsp><nbsp>
    <button class="btn btn-sm btn-primary" type="button"  id="print" accesskey="x">{% trans %}<i class="fa fa-file-excel-o" aria-hidden="true"></i> E<u>x</u>port to Spreadsheet{% endtrans %}</button>
      <button type="button" class="btn btn-sm btn-info" id="viewprintableversion" accesskey="t">{% trans %}<i class="fa fa-print" aria-hidden="true"></i> View Prin<u>t</u>able Version{% endtrans %}</button>
  </span>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/listofstockitems.js')}}"></script>
</body>
</html>
