<style type="text/css">
.shadow {
	box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
#latable td {
	font-size: 75%;
	padding: 4 !important;
	margin: 4 !important;
}

#latable th {
	font-size: 85%;
}

.card-view .title {
		font-weight: bold;
		display: inline-block;
		min-width: 30%;
		text-align: left !important;
}

#latable tbody {
		display:block;
		height: calc(100vh - 17em);
		overflow-y:scroll;
}
#latable thead,#latable tbody tr {
		display:table;
		width:100%;
		table-layout:fixed;
}
#latable thead {
		width: calc( 100% - 0.65em );
}

.calign{
	text-align:center;
}
.lalign{
	text-align:left;
}
.dtwrap{
	width :5%
	 }
.smwrap{
width:3%
}

.lngwrap{
width:16%
}
.mdwrap{
width:8%
}

</style>
<body>
	<div class="panel shadow">
		<div class="panel-body">
			<div class="alert alert-success" id="success-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown created successfully.{% endtrans %}
			</div>
			<div class="alert alert-danger" id="failure-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown could not be created.{% endtrans %}
			</div>

			<div class="alert alert-danger" id="duplicate-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown already exists!{% endtrans %}
			</div>
			<div class="col-sm-6">
				<div class="alert alert-danger" id="blank-alert"  aria-live="rude" role="alert" hidden>

					{% trans %}Please enter godown name!{% endtrans %}
				</div>
				<div class="form-group">
					<label for="godownname" id="godnname">{% trans %}Godown Name{% endtrans %} : </label>
					<input type="text" id="godownname" class="form-control input-sm" name="godownname"></input>
				</div>
				<div class="alert alert-danger" id="stateblank-alert"  aria-live="rude" role="alert" hidden>

					{% trans %}Please select state!{% endtrans %}
				</div>
				<div class="form-group">
					<label for="godownstate" id="godnstate">{% trans %}State{% endtrans %} : </label>
					<select id="godownstate" class="form-control input-sm tax_state">
						<option value="" disabled selected hidden>Select a State</option>
						<option value="Andaman and Nicobar Islands" stateid="1">Andaman and Nicobar Islands</option>
						<option value="Andhra Pradesh" stateid="2">Andhra Pradesh</option>
						<option value="Arunachal Pradesh" stateid="3">Arunachal Pradesh</option>
						<option value="Assam" stateid="4">Assam</option>
						<option value="Bihar" stateid="5">Bihar</option>
						<option value="Chandigarh" stateid="6">Chandigarh</option>
						<option value="Chhattisgarh" stateid="7">Chhattisgarh</option>
						<option value="Dadra and Nagar Haveli" stateid="8">Dadra and Nagar Haveli</option>
						<option value="Daman and Diu" stateid="9">Daman and Diu</option>
						<option value="Delhi" stateid="10">Delhi</option>
						<option value="Goa" stateid="11">Goa</option>
						<option value="Gujarat" stateid="12">Gujarat</option>
						<option value="Haryana" stateid="13">Haryana</option>
						<option value="Himachal Pradesh" stateid="14">Himachal Pradesh</option>
						<option value="Jammu and Kashmir" stateid="15">Jammu and Kashmir</option>
						<option value="Jharkhand" stateid="16">Jharkhand</option>
						<option value="Karnataka" stateid="17">Karnataka</option>
						<option value="Kerala" stateid="19">Kerala</option>
						<option value="Lakshadweep" stateid="20">Lakshadweep</option>
						<option value="Madhya Pradesh" stateid="21">Madhya Pradesh</option>
						<option value="Maharashtra" stateid="22">Maharashtra</option>
						<option value="Manipur" stateid="23">Manipur</option>
						<option value="Meghalaya" stateid="24">Meghalaya</option>
						<option value="Mizoram" stateid="25">Mizoram</option>
						<option value="Nagaland" stateid="26">Nagaland</option>
						<option value="Odisha" stateid="29">Odisha</option>
						<option value="Pondicherry" stateid="31">Pondicherry</option>
						<option value="Punjab" stateid="32">Punjab</option>
						<option value="Rajasthan" stateid="33">Rajasthan</option>
						<option value="Sikkim" stateid="34">Sikkim</option>
						<option value="Tamil Nadu" stateid="35">Tamil Nadu</option>
						<option value="Telangana" stateid="36">Telangana</option>
						<option value="Tripura" stateid="37">Tripura</option>
						<option value="Uttar Pradesh" stateid="38">Uttar Pradesh</option>
						<option value="Uttarakhand" stateid="39">Uttarakhand</option>
						<option value="West Bengal" stateid="41">West Bengal</option>
					</select>
				</div>
				<div class="alert alert-danger" id="addressblank-alert"  aria-live="rude" role="alert" hidden>

					{% trans %}Please enter address!{% endtrans %}
				</div>
				<div class="form-group">
					<label for="godownaddress" id="godnaddress">{% trans %}Address{% endtrans %} : </label>
					<textarea type="text" id="godownaddress" class="form-control" name="godownaddress"></textarea>
				</div>
				<small id="gdtextareahelp" class="form-text text-muted">Press Enter Key twice to shift focus to Contact Name.</small>
					<div>
					</br>
					<label for="godowncontactname" id="godnname">{% trans %}Contact Name{% endtrans %} : </label>
					<input type="text" id="godowncontactname" class="form-control input-sm" name="godownname"></input>
				</div></br>
				<div class="form-group">
					<label for="godowndesignation" id="godndesignation">{% trans %}Designation{% endtrans %} : </label>
					<input type="text" id="godowndesignation" class="form-control input-sm" name="godowndesignation"></input>
				</div>
				<div class="form-group">
					<label for="godowncontact" id="godncontact">{% trans %}Contact Number{% endtrans %} : </label>
					<input type="text" id="godowncontact" class="form-control input-sm" name="godowncontact"></input>
				</div>
		</div>
		<div class="col-sm-6">
		<div class="row">
				<label>{% trans %}List of last 5 created Godowns{% endtrans %} : </label>
		<table id="latable" class="table shadow table-bordered" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true">
	      <thead class="bg-primary">
	        <tr>
	          <th class="lngwrap lalign">
						{% trans %}Godown Name{% endtrans %}
						</th>
	          <th class="lngwrap lalign" >
						{% trans %}State{% endtrans %}
						</th>
	          <th class="lngwrap lalign" >
						{% trans %}Address{% endtrans %}
						</th>
	        </tr>
	      </thead>
	      <tbody>
				{% for record in gkresult %}
				<tr	value="{{record["godownid"]}}">
					<td class="smwrap lalign">
						<a class="libgname" href="">{{record["godownname"]}}</a>
					</td>
					<td class="smwrap lalign" >
						{{record["godownstate"]}}
					</td>
					<td class="smwrap lalign">
						{{record["godownaddress"]}}
					</td>
				</tr>
				{% endfor %}
	      </tbody>
	    </table>
	  </div>
		</div>
		</div>
		<div class="panel-footer">
			<div class="container-fluid">
				<button type="submit" class="btn btn-success btn-sm" id="gdnsubmit" name="submit">{% trans %}Save{% endtrans %}</button>
				<button id="gdnreset" class="btn btn-warning btn-sm">{% trans %}Reset{% endtrans %}</button>
			</div>
		</div>
	</div>

<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/creategodown.js')}}"></script>
</body>
