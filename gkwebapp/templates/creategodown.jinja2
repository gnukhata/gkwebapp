<body>
	<div class="panel col-sm-6 shadow">
		<div class="panel-body">
			<div class="alert alert-success" id="success-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown created successfully.{% endtrans %}
			</div>
			<div class="alert alert-danger" id="failure-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown could not be created.{% endtrans %}
			</div>

			<div class="alert alert-danger" id="duplicate-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Godown already exists!{% endtrans %}
			</div>
			<div class="alert alert-danger" id="blank-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Please enter godown name!{% endtrans %}
			</div>

			<div class="alert alert-danger" id="addressblank-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Please enter address!{% endtrans %}
			</div>

			<div class="alert alert-danger" id="contactblank-alert"  aria-live="rude" role="alert" hidden>

				{% trans %}Please enter contact!{% endtrans %}
			</div>
			<div class="form-group">
				<label for="godownname" id="godnname">{% trans %}<u>G</u>odown Name{% endtrans %} : </label>
				<input type="text" id="godownname" class="form-control input-sm" name="godownname" accesskey="g"></input>
			</div>
			<div class="form-group">
				<label for="godowncontact" id="godncontact">{% trans %}Godown <u>C</u>ontact{% endtrans %} : </label>
				<input type="text" id="godowncontact" class="form-control input-sm" name="godowncontact" accesskey="c"></input>
			</div>
			<div class="form-group">
				<label for="godownaddress" id="godnaddress">{% trans %}Godown <u>A</u>ddress{% endtrans %} : </label>
				<textarea type="text" id="godownaddress" class="form-control" name="godownaddress" accesskey="a"></textarea>
			</div>

		</div>
		<div class="panel-footer row">
			<div class="container-fluid">
				<button type="submit" class="btn btn-success btn-sm" id="gdnsubmit" name="submit" accesskey="s">{% trans %}<u>S</u>ave{% endtrans %}</button>
				<button id="gdnreset" class="btn btn-warning btn-sm" accesskey="e">{% trans %}R<u>e</u>set{% endtrans %}</button>
			</div>
		</div>
	</div>

</div>
<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/creategodown.js')}}"></script>
</body>
