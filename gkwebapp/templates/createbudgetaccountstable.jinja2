<style>
.panel{
margin-bottom: 20px;
background-color: #fff;
border: 1px solid transparent;
border-radius: 4px;
}

.table{
    width:100%;
    overflow:hidden;
    display:block;
}

</style>

<label style="padding-left:2.8%;margin-top:2%">
  {% trans %}<u>L</u>ist of <u>A</u>ccounts{% endtrans %} : 
  </label>
<div class="panel-body nopadding">
      <div class="alert alert-danger" id="content-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount!{% endtrans %}</label>
        </div>
  <table id="latable" class="table shadow table-bordered">
    <thead>
      <tr>
        <th class="lalign">
        {% trans %}Accounts Name {% endtrans %}
        </th>
        <th class="lalign" >
        {% trans %}Balance{% endtrans %}
        </th>
      </tr>
    </thead>
    <tbody style="height:40%;">
    <tr>
      <td colspan="2" style="font-size:15">
         Cash
      </td>
    </tr>
    {% for acc in gkresult["cashaccountdata"]%}
    <tr>
          <td> <i>{{acc["accountname"]}}</i></td>
          <td style="text-align:right">  {{acc["accountbal"]}}</td>
    </tr>
    {% endfor %}
    <tr>
      <td colspan="2" style="font-size:15">
          Bank
      </td>
    </tr>
    {% for acc in gkresult["bankaccountdata"]%}
    <tr>
          <td ><i>{{acc["accountname"]}}</i></td>
          <td style="text-align:right">{{acc["accountbal"]}}</td>
    </tr>
    {% endfor %}
    </tbody>
    <input type="hidden" id="openingbal" value="{{gkresult["balatbegin"] }}">
  </table>
 </div>
