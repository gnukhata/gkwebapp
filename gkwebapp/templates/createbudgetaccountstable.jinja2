<label style="padding-left:2.8%">
{# gbflag is checking wheather godown or branch #}
  {% trans %}<u>L</u>ist of <u>A</u>ccounts{% endtrans %} : 
  </label>
<div class="panel-body nopadding">
      <div class="alert alert-danger" id="content-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount!{% endtrans %}</label>
        </div>
  <table id="latable" class="table shadow table-bordered">
    <thead>
      <tr>
        <th class="lalign">
        {% if flag == '1' %}
        {% trans %}Accounts Name{% endtrans %}
        {% elif flag == '7' %}
        {% trans %}Groups Name{% endtrans %}
        {% else %}
        {% trans %}Subgroups Name{% endtrans %}
        {% endif %}
        </th>
        <th class="lalign" >
        {% trans %}Budget Amount{% endtrans %}
        </th>
      </tr>
    </thead>
    <tbody >
    {% for record in gkresult %}
    <tr	id="{{record["accountcode"]}}_id" value="{{record["accountcode"]}}">
      <td id="{{record["accountcode"]}}_name" class="smwrap lalign">
        {{record["accountname"] | trim}}
      </td>
      <td class="smwrap lalign">
          <input id="{{record["accountcode"]}}_value" type="text" 
            class="invoice_product_cgstamount tamount form-control input-sm text-right numtype" 
            value="0.00" size="8" placeholder="0.00" />        
      </td>
    </tr>
    {% endfor %}
    </tbody>
  </table>
    {%if flag == '7'%}
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Enter' Key from Groups Lists to shift focus to Save Button.{% endtrans %}</small><br>
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'DownArrow' Key or 'UpArrow' Key in Groups Lists to change focus on Group present in List.{% endtrans %}</small>
    {%elif flag == '19'%}
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Enter' Key from SubGroups Lists to shift focus to Save Button.{% endtrans %}</small><br>
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'DownArrow' Key or 'UpArrow' Key in SubGroups Lists to change focus on SubGroup present in List.{% endtrans %}</small>
    {%else%}
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Enter' Key from Accounts Lists to shift focus to Save.{% endtrans %}</small><br>
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'DownArrow' Key or 'UpArrow' Key in Accounts Lists to change focus on Account present in List.{% endtrans %}</small>
    
    {%endif%}
</div>