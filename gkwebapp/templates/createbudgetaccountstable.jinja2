<style>
.panel{
margin-bottom: 20px;
background-color: #fff;
border: 1px solid transparent;
border-radius: 4px;
}

.table{
    width:100%;
    overflow:hidden;
    display:block;
    border-radius: 4px;
}
.lalign{
  text-align:center;
}

 #sales_latable td {
    font-size: 75%;
    padding: 4 !important;
    margin: 4 !important;
  }

  #sales_latable th {
    font-size: 85%;
  }

  .card-view .title {
      font-weight: bold;
      display: inline-block;
      min-width: 30%;
      text-align: left !important;
  }

  #sales_latable tbody {
      display:block;
      height: calc(100vh - 18em);
      overflow-y:scroll;
  }
  #sales_latable thead,#sales_latable tbody tr {
      display:table;
      width:100%;
      table-layout:fixed;
  }
  #sales_latable thead {
      width: calc( 100% - 0.65em );
  }

</style>

<div class="panel-body nopadding">
      <div class="alert alert-danger" id="inflow-account-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount for Inflow!{% endtrans %}</label>
        </div>
      <div class="alert alert-danger" id="outflow-account-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount for Outflow!{% endtrans %}</label>
        </div>
        <div class="alert alert-danger" id="expense-account-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount for Expenses!{% endtrans %}</label>
        </div>
      <div class="alert alert-danger" id="income-account-alert" aria-live="rude" role="alert" hidden>
          <label for="viewledger_fromdate">{% trans %}Please enter atleast one budget amount for Incomes!{% endtrans %}</label>
        </div>
        <div >
          <label for="c_bname" >{% trans %}List of Accounts{% endtrans %} :</label>
        </div>
  {% if btype == 3 %}
      <table id="cash_latable" style="width:100%;border:1px solid grey"   class="table shadow table-bordered">
        <thead>
          <tr>
            <th class="lalign">
            {% trans %}Accounts Name{% endtrans %}
            </th>
            <th class="lalign">
            {% trans %}Budget Amount{% endtrans %}
            </th>
          </tr>
        </thead>
        <tbody style="height:inherit; overflow: auto;">
        <tr><td colspan="2">
        <b>Enter accounts budget used for Inflow </b> <input hidden></td>
        </tr>
        </tbody>
        <tbody  style="height:30%; overflow: auto;">
        {% for record in gkresult["inflow"] %}
        
        <tr id="{{record["accountcode"]}}_name" data-value="{{record["accountcode"]}}">
          <td class="form-text text-muted" >
              <i>{{record["accountname"]}}</i>
          </td>
          <td>
              <input id="{{record["accountcode"]}}_value" type="text" 
                  class="invoice_product_cgstamount tamount form-control input-sm text-right numtype" 
                  value="0.00" size="8" placeholder="0.00" />
          </td>
        </tr>
        {% endfor %}
        <tbody style="height:inherit; overflow: auto;">
        <tr><td colspan="2">
        <b>Enter accounts budget used for Outflow </b> <input hidden></td>
        </tr>
        </tbody>
        <tbody  style="height:30%; overflow: auto;">
        {% for record in gkresult["outflow"] %}
        
        <tr id="{{record["accountcode"]}}_name" data-value="{{record["accountcode"]}}">
          <td class="form-text text-muted" >
              <i>{{record["accountname"]}}</i>
          </td>
          <td >
              <input id="{{record["accountcode"]}}_value" type="text" 
                  class="invoice_product_cgstamount tamount form-control input-sm text-right numtype" 
                  value="0.00" size="8" placeholder="0.00" />
          </td>
        </tr>
        {% endfor %}
        </tbody>
      </table>
      <input hidden id="inflowaccount" value="{{ gkresult["inflow"]|length }}">
      <input hidden id="outflowaccount" value="{{ gkresult["outflow"]|length }}">
      <input hidden id="op" value="{{gkresult["openingbal"]}}">
        <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Enter' Key from Budget amount to shift focus to Save Button.{% endtrans %}</small><br>
        <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Down Arrow' Key or 'Up Arrow' Key in Accounts Lists to navigate between Accounts present in List.{% endtrans %}</small>
   
  {% else %}
      <table id="cash_latable" style="width:100%;border:1px solid grey"   class="table shadow table-bordered">
        <thead>
          <tr>
            <th class="lalign">
            {% trans %}Accounts Name{% endtrans %}
            </th>
            <th class="lalign">
            {% trans %}Budget Amount{% endtrans %}
            </th>
          </tr>
        </thead>
        <tbody  style="height:inherit; overflow: auto;">
        <tr><td colspan="2">
        <b>Enter accounts budget used for Incomes </b> <input hidden></td>
        </tr>
        </tbody>
        <tbody  style="height:25%; overflow: auto;">
        {% for record in gkresult[1] %}
        
        <tr id="{{record}}_name" data-value="{{record}}">
          <td class="form-text text-muted">
              <i>{{gkresult[1][record]}}</i>
          </td>
          <td>
              <input id="{{record}}_value" type="text" 
                  class="invoice_product_cgstamount tamount form-control input-sm text-right numtype" 
                  value="0.00" size="8" placeholder="0.00" />
          </td>
        </tr>
        {% endfor %}
        </tbody>
        <tbody  style="height:inherit; overflow: auto;">
        <tr><td colspan="2">
        <b>Enter accounts budget used for Expenses </b> <input hidden></td>
        </tr>
        </tbody>
        <tbody  style="height:25%; overflow: auto;">
        {% for record in gkresult[0] %}
        
        <tr id="{{record}}_name" data-value="{{record}}">
          <td class="form-text text-muted">
              <i>{{gkresult[0][record]}}</i>
          </td>
          <td>
              <input id="{{record}}_value" type="text" 
                  class="invoice_product_cgstamount tamount form-control input-sm text-right numtype" 
                  value="0.00" size="8" placeholder="0.00" />
          </td>
        </tr>
        {% endfor %}
        </tbody>
        
      </table>
      <input hidden id="outflowaccount" value="{{ gkresult[0]|length }}">
      <input hidden id="inflowaccount" value="{{ gkresult[1]|length }}">
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Enter' Key from Accounts Lists to shift focus to Save Button.{% endtrans %}</small><br>
    <small id="txtareahelp" class="form-text text-muted">{% trans %}Press 'Tab' Key or 'UpArrow' Key in Accounts Lists to change focus on Account present in List.{% endtrans %}</small>
  {% endif %}
 </div>
