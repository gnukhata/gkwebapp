<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Account Creation</title>

</head>
<body >
	<div class="container">
		<div style="padding-top:5px" class="mainbox col-md-6">
			<div class="panel panel-info" >
				<div class="panel-heading">
					<div class="panel-title">Create Account</div>

				</div>

				<div style="padding-top:5px" class="panel-body" >


					<form id="accountform" method="post"  action="addaccount" class="form-horizontal">

						<div style="margin-bottom: 5px" class="col-xs-12 from-group">
							<label for="groupname" id="gname">Group Name :</label>
							<select class = "form-control gsselect" id="groupname"  name = "groupname" required data-msg="Please select a group">
								<option value="" disabled selected hidden>Select Group</option>
								{% for grps in gkresult %}
								<option value="{{grps['groupcode']}}">{{grps["groupname"]}}</option>
								{% endfor %}
							</select>
							<br/>
							<label for="subgroupname" id="sname">Sub-Group Name :</label>
							<select class = "form-control gsselect" id="subgroupname" name="subgroupname" required data-msg="Please select a sub-group" >
								<option value="" disabled selected hidden>Select Sub-Group</option>
							</select>
							<br/>
							<div id="nsgp" style="margin-bottom: 25px" class="input-group">
								<label for="newsubgroup" id="newsgrp">Sub-Group Name :</label>
								<input type="text" id="newsubgroup" class="form-control" name="newsubgroup" placeholder="New Sub-Group Name" required data-msg="Please enter sub-group name" ></input>
							</div>

							<label> <input type="checkbox" id="maccounts"> Create Multiple Accounts</label>
							<br/>
							<label for="accountname" id="accname">Account Name :</label>
							<input type="text" id="accountname" class="form-control" name="accountname" placeholder="Accountname" required data-msg="Please enter account name"></input>
							<br/>
							<label for="openbal" id="obal">Opening Balance :</label>
							<input id="openbal" name="openbal" value="0.00" class=" form-control" type="text" placeholder="0.00"/>
							<br/>
							<button type="submit" class="btn btn-primary" id="submit" name="submit">Submit</button>
							<button id="reset" class="btn btn-danger">Reset</button>

						</div>
					</form>
				</div>
			</div>
		</div>
		<div style="padding-top:5px" class="col-md-6">
			<table class="table table-striped">
				<thead>
					<tr class="success">
						<th>{{baltbl[0]}}</th>
					</tr>
					<tr class="info">
						<th>Group Name</th>
						<th>No. of accounts</th>
						<th>Group Balance</th>
					</tr>
				</thead>
				<tbody>
					{% for i in range(1,5) %}
					<tr>
						<td>{{baltbl[i]["groupname"]}}</td>
						<td align="right">{{baltbl[i]["numberofaccounts"]}}</td>
						<td align="right">{{baltbl[i]["groupbalance"]}}</td>
					</tr>
					{% endfor %}
					<tr class="info">
						<th>Total (A)</th>
						<th></th>
						<td align="right"><b>{{baltbl[5]["Total"]}}</b></td>
					</tr>
				</tbody>
			</table>
			<table class="table table-striped">
				<thead>
					<tr class="success">
						<th >{{baltbl[6]}}</th>
					</tr>
					<tr class="info">
						<th>Group Name</th>
						<th>No. of accounts</th>
						<th>Group Balance</th>
					</tr>
				</thead>
				<tbody>
					{% for i in range(7,12) %}
					<tr>
						<td>{{baltbl[i]["groupname"]}}</td>
						<td align="right">{{baltbl[i]["numberofaccounts"]}}</td>
						<td align="right">{{baltbl[i]["groupbalance"]}}</td>
					</tr>
					{% endfor %}
					<tr class="info">
						<th>Total (B)</th>
						<th></th>
						<td align="right"><b>{{baltbl[12]["Total"]}}</b></td>
					</tr>
					<tr class="info">
						<th>Difference in Total Balance (A-B)</th>
						<th></th>
						<td align="right"><b>{{baltbl[13]["Difference in balance"]}}</b></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/jquery.validate.min.js')}}"></script>
	<script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/createaccount.js')}}"></script>
</body>
</html>
