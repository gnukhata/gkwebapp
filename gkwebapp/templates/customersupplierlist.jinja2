<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{% trans %}GNUKhata | Customer and Supplier List{% endtrans %}</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="panel">
	<div class="panel-heading">
	  <strong>Unadjusted Bills</strong>
	</div>
	  <div class="panel-body">
	    <div class="container-fluid row">
	      <div class="form-group col-md-3">
		<label for="customerselect">List of Customers:</label>
		<select id="customerselect" class="form-control input-sm">
		  <option value="" disabled hidden selected>Select Customer</option>
		  {% for customer in customers %}
                    <option value="{{customer['custid']}}">{{customer["custname"]}}</option>
		  {% endfor %}
		</select>
	      </div>
	      <div class="form-group col-md-3">
		<label for="supplierselect">List of Suppliers:</label>
		<select id="supplierselect" class="form-control input-sm">
		  <option value="" disabled hidden selected>Select Supplier</option>
		  {% for supplier in suppliers %}
                    <option value="{{supplier['custid']}}">{{supplier["custname"]}}</option>
		  {% endfor %}
		</select>
	      </div>
	    </div>
	    <div class="container-fluid row" id="billwisediv">
	    </div>
	  </div>
	  <div class="panel-footer" hidden>
	    <button type="button" id ="btasadv" class="btn footerbutton btn-primary">{% trans %}As Advance{% endtrans %}</button>
	    <button type="button" id ="btonacc" class="btn footerbutton btn-danger">{% trans %}On Account{% endtrans %}</button>
	    <button type="button" id ="btbillwise" class="btn footerbutton btn-info">{% trans %}Bill Wise Accounting{% endtrans %}</button>
            <button type="button" id ="btclose" class="btn footerbutton btn-success">{% trans %}Done{% endtrans %}</button>
          </div>
	</div>
    </div>
    <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/customersupplierlist.js')}}"></script>
  </body>
</html>
