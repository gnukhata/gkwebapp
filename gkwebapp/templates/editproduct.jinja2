<!DOCTYPE html>
<html>
  <head>
  </head>
  <body>

    <div class='container-fluid editpr'>
      <form id="editprodform">
      <label for="prodselect" class="">{% trans %}Product{% endtrans %} :</label>
      <select class = "form-control input-sm"  name = "productcode" id="prodselect" >
        <option value="" disabled selected hidden>{% trans %}Select Product{% endtrans %}</option>
        {% for prod in gkresult %}
        <option value="{{prod['productcode']}}">{{prod["productdesc"]}}</option>
        {% endfor %}
      </select>
      <div class="container-fluid nopadding" id="proddetails" disabled>

      </div>
      <div class="btn-group-sm pbutn" hidden>
        <button type="submit" class="btn btn-primary btn-sm" id="epsubmit" name="submit" accesskey="s">{% trans %}<u>S</u>ave{% endtrans %}</button>
        <button id="epreset" class="btn btn-warning btn-sm" accesskey="e">{% trans %}R<u>e</u>set{% endtrans %}</button>
        <button id="epdelete" class="btn btn-danger btn-sm" accesskey="d">{% trans %}<u>D</u>elete{% endtrans %}</button>
        <button id="epedit" class="btn btn-primary btn-sm" accesskey="t">{% trans %}Edi<u>t</u>{% endtrans %}</button>

      </div>
      </form>
      <div id="m_confirmdel" class="modal fade" tabindex="-1" role="dialog">
        <div class="vertical-alignment-helper">
          <div class="modal-dialog modal-sm vertical-align-center">
            <div class="modal-content">
              <div class="modal-header">

                <h4 class="modal-title">{% trans %}Delete?{% endtrans %}</h4>
              </div>
              <div class="modal-body">
                <p>{% trans %}Are you sure?{% endtrans %}</p>
              </div>
              <div class="modal-footer">
                <button type="button" id ="m_cancel" class="btn btn-warning" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
                <button type="button" id="proddel" data-dismiss="modal" class="btn btn-danger">{% trans %}Delete{% endtrans %}</button>
              </div>
            </div><!-- /.modal-content -->
          </div><!-- /.modal-dialog -->
        </div>
      </div><!-- /.modal -->

    </div>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/editproduct.js')}}"></script>
  </body>
</html>
