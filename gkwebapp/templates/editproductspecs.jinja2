<div class="col-sm-6 ">

  <div class="form-group">
    <label for="editproddesc" class="">{% trans %}Product Description{% endtrans %} :</label>
    <input type='text' class="form-control input-sm" name="editproddesc"  id="editproddesc" value="{{proddesc['productdesc']}}" placeholder="Alphanumeric">

  </div>
  <div class="form-group">
    <label for="catselect" class="">{% trans %}Category{% endtrans %} :</label>
    <select class = "form-control input-sm "  name = "catselect" id="editcatselect" >
      {% for cat in category %}
      {% if cat['categorycode']== proddesc["categorycode"] %}
      <option value="{{cat['categorycode']}}" selected>{{cat["categoryname"]}}</option>
      {% elif proddesc["categorycode"]== None %}
      <option value="" selected>{% trans %}None{% endtrans %}</option>
      {% else %}
      <option value="{{cat['categorycode']}}" >{{cat["categoryname"]}}</option>
      {% endif %}
      {% endfor %}
    </select>
  </div>
  <div class="form-group">
    <label for="uom" class="">{% trans %}Unit of Measurement{% endtrans %} :</label>
    <select class = "form-control input-sm "  name = "uom" id="edituom" >
      {% for uom in uom %}
      {% if uom["uomid"]== proddesc["uomid"] %}
      <option value="{{uom['uomid']}}" selected>{{uom["unitname"]}}</option>
      {% else %}
      <option value="{{uom['uomid']}}">{{uom["unitname"]}}</option>
      {% endif %}
      {% endfor %}
    </select>
  </div>
  <div class="form-group">
    <div class="panel">
    <table id="product_edit_tax_table" class="table table-condensed table-bordered fixed-table">
      <thead class="bg-primary input-sm">
        <tr>
          <th class="col-xs-4">{% trans %}Tax Name{% endtrans %}</th>
          <th class="col-xs-4">{% trans %}State(optional){% endtrans %}</th>
          <th class="col-xs-3">{% trans %}Rate{% endtrans %}</th>
          <th class="col-xs-1"></th>
          <th class=""></th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
    </div>
  </div>
</div>
<div id="extsp">

<div id = "editspecifications" class="col-sm-6">
    {% if proddesc["categorycode"]!= None %}

      <div class="form-group ">
        {% for spec in prodspecs %}
        {% for pdesc in proddesc["specs"] %}
        {% if spec['spcode']|int == pdesc|int %}
        <div class="form-group">

          <label for="{{spec['spcode']}}" class="">{{spec["attrname"]}} :</label>
          {% if spec["attrtype"]==0 %}
          <input type="text" class="form-control input-sm" name="{{spec['spcode']}}"  id="{{spec['spcode']}}" value="{{proddesc['specs'][pdesc]}}" placeholder="Alphanumeric">
          {% elif spec["attrtype"]==1 %}
          <input type="text" class="form-control input-sm numtype" name="{{spec['spcode']}}"  id="{{spec['spcode']}}" value="{{proddesc['specs'][pdesc]}}" placeholder="Numeric">
          {% elif spec["attrtype"]==2 %}
          <input type="text" class="form-control input-sm specdate" name="{{spec['spcode']}}"  id="{{spec['spcode']}}" value="{{proddesc['specs'][pdesc]}}" placeholder="DD-MM-YYYY">
          {% elif spec["attrtype"]==3 %}
          {% if proddesc['specs'][pdesc]|int ==1 %}
          <label class="radio-inline"><input value = "1" class="radtype" type="radio" name="{{spec['spcode']}}" checked>{% trans %}Yes{% endtrans %}</label>
          <label class="radio-inline"><input value = "0" class=" radtype" type="radio" name="{{spec['spcode']}}">{% trans %}No{% endtrans %}</label>
          {% else %}
          <label class="radio-inline"><input value = "1" class="radtype" type="radio" name="{{spec['spcode']}}">{% trans %}Yes{% endtrans %}</label>
          <label class="radio-inline"><input value = "0" class=" radtype" type="radio" name="{{spec['spcode']}}" checked>{% trans %}No{% endtrans %}</label>
          {% endif %}
          {% endif %}
        </div>
        {% endif %}
        {% endfor %}

        {% endfor %}
      </div>

      {% endif %}


</div>
</div>
