<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>GNUKhata | {{vtype}}</title>
</head>
<body>
  <div class="container">
    <div class="panel panel-info">
      <div class="panel-body">
        <form name="voucher" class="" action="" method="post">
          <div class="well well-sm">
            <label for="vno">Voucher No:</label>
            <input type="text" name="vno" id="vno" size="10">
            <div class="pull-right">
              <label for="vdate">Date:</label>
              <input type="text" name="vday" class="vdate" id="vdate" value="" size="2" maxlength="2">
              <input type="text" name="vmonth" class="vdate" value="" size="2" maxlength="2">
              <input type="text" name="vyear" class="vdate" value="" size="4" maxlength="4">
            </div>
          </div>
          <div class="panel panel-default">
            <table id="vtable" class="table table-striped table-bordered table-condensed">
              <thead>
              <tr class="info">
                <th>
                  Cr/Dr
                </th>
                <th>
                  Account Name
                </th>
                <th>
                  Dr Amount
                </th>
                <th>
                  Cr Amount
                </th>
              </tr>
              </thead>
              <tbody>
              <tr>
                <td>
                  <select class="form-control input-sm crdr" name="type" disabled>
                    <option value="Dr">Dr</option>
                    <option value="Cr">Cr</option>
                  </select>
                </td>
                <td>
                  <select class="form-control input-sm accs" name="type">
                    {% for acc in accounts %}
                    <option value="{{acc['accountcode']}}">{{acc['accountname']}}</option>
                    {% endfor %}
                  </select>
                </td>
                <td>
                  <input class="form-control input-sm dramt" type="text" name="dr" value="0.00">
                </td>
                <td>
                  <input class="form-control input-sm cramt" type="text" name="cr" value="" disabled>
                </td>
              </tr>
              <tr>
                <td>
                  <select class="form-control input-sm crdr" name="type" disabled>
                    <option value="Cr">Cr</option>
                    <option value="Dr">Dr</option>
                  </select>
                </td>
                <td>
                  <select class="form-control input-sm accs" name="type">
                    {% for acc in accounts %}
                    <option value="{{acc['accountcode']}}">{{acc['accountname']}}</option>
                    {% endfor %}
                  </select>
                </td>
                <td>
                  <input class="form-control input-sm dramt" type="text" name="dr" value="" disabled>
                </td>
                <td>
                  <input class="form-control input-sm cramt" type="text" name="cr" value="0.00">
                </td>
              </tr>
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="2">
                    Total
                  </td>
                  <td>
                    <input class="form-control input-sm" type="text" name="dr" value="0.00" disabled>
                  </td>
                  <td>
                    <input class="form-control input-sm" type="text" name="cr" value="0.00" disabled>
                  </td>
                </tr>
              </tfoot>
            </table>
          </div>
          <div class="col-xs-1">
            <label for="project">Project:</label>
          </div>
          <div class="col-xs-3">
            <select class="form-control input-sm" name="project">
              <option value="option">GNUKhata</option>
            </select>
          </div>
          <div class="col-xs-1 col-xs-offset-1">
            <label for="narration">Narration:</label>
          </div>
          <div class="pull-right">
            <textarea class="form-control" name="narration" id="narration" rows="2" cols="60"></textarea>
          </div>
          <input type="hidden" id="vtype" name="vtype" value="{{vtype}}">
        </form>
      </div>
      <div class="panel-footer">
          <button type="button" class="btn btn-success">
            Save
          </button>
          <button type="button" class="btn btn-warning">
            Reset
          </button>

      </div>
    </div>
  </div>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/jquery.autotab.min.js')}}"></script>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/addvoucher.js')}}"></script>
</body>
</html>
