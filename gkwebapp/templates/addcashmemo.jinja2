              <tr>
  		<th class="mdvwrap text-center">{% trans %}Product{% endtrans %}</th>
  		<th class="qtyvwrap text-center">{% trans %}Billed Quantity{% endtrans %}</th>
  		<th class="qtyvwrap text-center">{% trans %}Free Quantity{% endtrans %}</th>
