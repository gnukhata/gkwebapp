			<small class="row col-sm-12 form-text text-muted">S = Selling Price</small><br>
		      {% endif %}
		    </div>
		  </div>
  		  <table id="invoice_product_table_vat" class=" table table-condensed table-bordered fixed-table fixed-tablepurchase" hidden>
  	    {% endif %}
