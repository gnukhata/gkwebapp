<!DOCTYPE html>
<html lang="en">
<head>
<style type="text/css">

.selected
{
  background-color: Aquamarine;
}

.shadow {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
}
td {
	font-size: 75%;
	color: black;
	padding: 4 !important;
	margin: 4 !important;
}


th {
	font-size: 85%;
}
.card-view .title {
		font-weight: bold;
		display: inline-block;
		min-width: 30%;
		text-align: left !important;
}

tbody {
		display:block;
		height: calc(100vh - 22em);
		overflow-y:scroll;
}
 thead,tbody tr {
		display:table;
		width:100%;
		table-layout:fixed;
}
 thead {
		width: calc( 100% - 0.75em )
}
.nopadding{
	padidng:0 !important;
	padding:0 !important;
}
.ralign{
	text-align:right;
}
.cred{
	color:red;
}
.calign{
	text-align:center;
}

</style>
</head>
<body>
  <input type="hidden" id="urole" name="urole" value="{{userrole}}"></input>
  <input type="hidden" id="modalindex" value=""></input>
 <div class="row">
    <table id="vtable" class="table table-fixedheader   table-condensed table-bordered" data-toggle="table" data-show-toggle="true"  data-search-align="left" data-buttons-align="left" data-search="true">
      <thead>
        <tr>
            <th class="5width">{% trans %}V. No.{% endtrans %}</th>
            <th class="calign 5width">{% trans %}Status{% endtrans %}</th>
            <th class="6width">{% trans %}Date{% endtrans %}</th>
            <th class="10width">{% trans %}Type{% endtrans %}</th>
            <th class="20width">{% trans %}Dr Accounts{% endtrans %}</th>
            <th class="20width">{% trans %}Cr Accounts{% endtrans %}</th>
            <th class="ralign 10width">{% trans %}Dr Amounts{% endtrans %}</th>
            <th class="ralign 10width">{% trans %}Cr Amounts{% endtrans %}</th>
            <th class="14width">{% trans %}Narration{% endtrans %}</th>

        </tr>
      </thead>
      <tbody>
        {% for vc in vouchers %}
        <tr  value="{{vc['vouchercode']}}">
            <td style="width:5%; word-wrap:break-word;">
              <a class="vno" href="">{{vc['vouchernumber']}}</a>
            </td>
            {% if (vc['status']) %}
            <td style="width:5%" class="cred calign">***</td>
            {% else %}
            <td style="width:5%" class="cred calign">&nbsp </td>
            {% endif %}
            <td style=" width:6%">
              {{vc['voucherdate']}}
            </td>
            {% if vc['vouchertype'] =="contra" %}
            <td style=" width:10%">
              {% trans %}Contra{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "payment" %}
            <td style=" width:10%">
              {% trans %}Payment{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "receipt" %}
            <td style=" width:10%">
              {% trans %}Receipt{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "journal" %}
            <td style=" width:10%">
              {% trans %}Journal{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "sales" %}
            <td style=" width:10%">
              {% trans %}Sales{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "purchase" %}
            <td style=" width:10%">
              {% trans %}Purchase{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "creditnote" %}
            <td style=" width:10%">
              {% trans %}Credit Note{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "debitnote" %}
            <td style=" width:10%">
              {% trans %}Debit Note{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "salesreturn" %}
            <td style=" width:10%">
              {% trans %}Sale Return{% endtrans %}
            </td>
            {% elif vc['vouchertype'] == "purchasereturn" %}
            <td style=" width:10%">
              {% trans %}Purchase Return{% endtrans %}
            </td>
            {% endif %}
            <td style=" width:20%">
              {{vc["drs"].keys()[0]}}
            </td>
            <td style=" width:20%">
              {{vc["crs"].keys()[0]}}
            </td>
            <td style="width:10%" class=" ralign">
              {{vc["drs"][vc["drs"].keys()[0]]}}
            </td>
            <td style="width:10%"class="ralign">
              {{vc["crs"][vc["crs"].keys()[0]]}}
            </td>
              {% if vc['narration']=="" %}
              <td style="width:14%">&nbsp</td>
              {% else %}
              <td style="width:14%">{{vc['narration']}}</td>
              {% endif %}
        </tr>
        {% endfor %}
      </tbody>
    </table>
</div>

  <div id="viewvc">
  </div>
  <br>
  <div class="">
    <span style="margin:auto; display:table;">
      <button type="button" class="btn btn-sm btn-info" id="viewprintableversion" accesskey="t">{% trans %}View Prin<u>t</u>able Version{% endtrans %}</button>
    </span>
  </div>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/bootstrap-table.js')}}"></script>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/findvouchertable.js')}}"></script>
</body>
</html>
