<!DOCTYPE html>
<html>
<head>
</head>
<body>

  <div class='container-fluid addprod'>
    <form id="addprodform">
      <div class="form-group">
        <label for="addcatselect" class="">{% trans %}Category{% endtrans %} :</label>
        <select class = "form-control input-sm"  name = "catselect" id="addcatselect" >
          <option value="" disabled selected hidden>{% trans %}Select Category{% endtrans %}</option>
          {% for cat in gkresult["category"] %}
          <option value="{{cat['categorycode']}}">{{cat["categoryname"]}}({{cat["subcount"]}})</option>
          {% endfor %}
        </select>
      </div>
      <div class="form-group pds" hidden>
        <label for="proddesc" class="">{% trans %}Product Description{% endtrans %} :</label>
        <input type="text" class="form-control input-sm" name="proddesc"  id="proddesc" placeholder="Alphanumeric">
      </div>
      <div class="form-group pds" hidden>
        <label for="uom" class="">{% trans %}Unit of Measurement{% endtrans %} :</label>
        <select class = "form-control input-sm sel"  name = "uom" id="adduom" >
          <option value="" disabled selected hidden>{% trans %}Select Unit of Measurement{% endtrans %}</option>
          {% for uom in gkresult["uom"] %}
          <option value="{{uom['uomid']}}">{{uom["unitname"]}}</option>
          {% endfor %}
        </select>
      </div>
      <div class="form-group" id="specifications">

      </div>
      <div class="btn-group-sm pbutn" hidden>
        <button type="submit" class="btn btn-primary btn-sm" id="apsubmit" name="submit" accesskey="s">{% trans %}<u>S</u>ave{% endtrans %}</button>
        <button id="apreset" class="btn btn-warning btn-sm" accesskey="e">{% trans %}R<u>e</u>set{% endtrans %}</button>

      </div>
    </form>


  </div>
  <script type="text/javascript" src="{{request.static_url('gkwebapp:static/js/addproduct.js')}}"></script>
</body>
</html>
